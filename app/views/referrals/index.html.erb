<%= link_to 'Print', params.permit(:from, :to, :status_type).merge(format: 'pdf'), class: 'pull-right btn btn-primary'  %>

<section id="widget-grid" class="referrals_section">
  <%= render partial: 'state_button_filter_with_remote', locals: {controller_name: 'goals', container: 'goals_container'} %>
  <% if can?(:create_referrals, :manage_roles, :manage_referrals) %>
      <div class="btn-group pull-right btn-edition">
        <button class="btn btn-primary">
          Add Referral For
        </button>
        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <% @cases_for_btn.each do |c| %>
              <li>
                <%= link_to c, new_referral_path(case_id: c.id) %>
              </li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'list',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                         referrals: @referrals,
                         wid_id: 'referrals',
                         wid_title: t('referrals')
                 } %>
    </article>
  </div>
</section>

