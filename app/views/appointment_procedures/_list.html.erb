<table  class="table table-bordered table-responsive" id="appointment_procedure_table">
  <thead>
  <tr>
    <th><%= t :hcpc %></th>
    <th>Modifier</th>
    <th>Date Recorded</th>
    <th>Unit</th>
    <th>Charges</th>
    <th>Diagnosis Pointer</th>
    <th>Provider</th>

  </tr>
  </thead>

  <tbody>

  <% captures.each do |capture| %>
      <tr>
        <td><%= link_to capture.hcpc , capture  %></td>
        <td><%= capture.modifier   %></td>
        <td><%= format_date capture.date_recorded   %></td>
        <td><%= capture.unit   %></td>
        <td><%= capture.charges   %></td>
        <td><%= capture.diagnosis_pointer   %></td>
        <td><%= capture.provider   %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function(){
        initDataTable('appointment_procedure_table');
    } );
</script>
