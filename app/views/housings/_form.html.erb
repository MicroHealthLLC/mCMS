<div class="row">
  <div class="col-xs-12 col-md-8">

    <fieldset>
      <legend></legend>
      <%= form_for(housing, html: { class: 'form-horizontal',  :multipart => true}) do |f| %>
          <% if housing.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(housing.errors.count, "error") %> prohibited this daily living from being saved:</h2>

                <ul>
                  <% housing.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <%= f.hidden_field :user_id %>

          <div class="form-group">
            <%= f.label 'Housing Type', class: 'col-md-2 control-label' %>
            <div class="col-md-9">
              <%= text_field_tag :snomed, f.object.snomed,  class: 'form-control' , placeholder: 'Type to Search', required: true %>
              <%= f.hidden_field :snomed %>
              <script>
                  $(document).ready(function(){
                      $('#snomed').on('keyup', function(){
                          $('#housing_snomed').val('');
                      })
                      $('#snomed').autocomplete({
                          source: "/snomed.json?default=housing",
                          minLength: 2,
                          select: function( event, ui ) {
                              $('#housing_snomed').val(ui.item.id)
                              $('#link_info').show();
                              $('#dialog').html(
                                  "<b>ID:</b><span> "+ ui.item.ui +"</span><br/>"+
                                  "<b>NAME:</b><span> "+ ui.item.label+"</span><br/>"+
                                  "<b>URI:</b><span><a target='_blank' href='" + ui.item.uri +"' > click here</a></span>"
                              )
                          }
                      })
                  })
              </script>
            </div>
            <p hidden style="display: none" id="dialog">

            </p>
            <div class="col-md-1" style="display: none" id="link_info">
              <%= link_to 'Info', "#", class: 'btn btn-info', onclick: '$("#dialog").dialog();' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label t(:housing_status), class: 'col-md-2 control-label' %>
            <div class="col-md-9">
              <%= f.select :housing_status_id, options_for_select(HousingStatus.active.pluck(:name, :id), selected: f.object.housing_status.try(:id)) , {} ,{class: 'form-control'} %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label t(:primary_address), class: 'col-md-2 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :address, class: 'form-control'  %>
              <%= f.hidden_field :location_lat, class: 'form-control' %>
              <%= f.hidden_field :location_long, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label t(:estimated_monthly_amount), class: 'col-md-2 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :estimated_monthly_payment , class: 'form-control' %>
            </div>
          </div>


          <div class="form-group">
            <%= f.label t(:description) , class: 'col-md-2 control-label' %>
            <div class="col-md-9">
              <%= f.text_area :description , class: 'form-control ck-editor' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label t(:date_start) , class: 'col-md-2 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :date_start , class: 'form-control date_picker' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label t(:date_end) , class: 'col-md-2 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :date_end , class: 'form-control date_picker' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.label t(:attachments) , class: 'col-md-2 control-label' %>
            </div>
            <%= f.simple_fields_for :housing_attachments do |attachment| %>
                <%= render 'attachments/attachment_show', :f => attachment %>
            <% end %>
            <div id="attachment_fields" class="col-xs-2 margin-top-10 " style="padding-right: 2px;" >
              <%= link_to_add_association 'add file', f, :housing_attachments, class: 'btn btn-success pull-right', partial: 'attachments/attachment_fields' %>
            </div>
          </div>

          <div class="form-group" >
            <div class="col-md-11">
              <%= link_to t('button_cancel'), housings_path, class: 'btn btn-warning pull-right' %>
              <%= f.submit t(:button_save), class: 'btn btn-success pull-right' %>
            </div>
          </div>
      <% end %>
    </fieldset>

  </div>
  <div class="col-xs-12 col-md-4">
    <%= render partial: 'map', locals: {
        location: 'housing_address',
        location_lat: 'housing_location_lat',
        location_long: 'housing_location_long',
        object: housing
    } %></div>
</div>
