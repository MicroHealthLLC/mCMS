<div class="col-xs-12 btn-edition">
  <%= link_to( 'Delete',  position_path(@position), class: 'btn btn-danger pull-right',
               :method => :delete,
               :data => {:confirm => t(:text_are_you_sure)})  if @position.can?(:delete_positions, :manage_positions, :manage_roles)
  %>
  <% if params[:action] == 'show' %>
      <%= link_to 'Edit', edit_position_path(@position), class: 'btn btn-success pull-right'  if @position.can?(:edit_positions, :manage_positions, :manage_roles) %>
  <% else %>
      <%= link_to 'Show', position_path(@position), class: 'btn btn-success pull-right'  if @position.can?(:show_positions, :manage_positions, :manage_roles) %>
  <% end %>
  <%= link_to t('button_cancel'), positions_path, class: 'btn btn-warning pull-right' %>
  <%= link_to t('button_print'), position_path(@position, format: 'pdf'), class: 'btn btn-primary pull-right' %>
  <%= link_to t('button_history_changes'), "/histories/#{@position.class}/#{@position.id}", class: 'btn btn-primary pull-right' %>
</div>