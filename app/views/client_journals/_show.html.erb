<div class="row">
  <div class="col-xs-12" style="padding:15px 25px 15px 25px;">
    <p>
      <strong>Title:</strong>
      <%= @client_journal.title %>
    </p>

    <p>
      <strong>Client Journal type:</strong>
      <%= @client_journal.client_journal_type %>
    </p>

    <p>
      <strong>Date:</strong>
      <%=  format_date @client_journal.date %>
    </p>

    <p>
      <strong>Note:</strong>
      <%= @client_journal.note.html_safe %>
    </p>
    <p>
      <strong><%= t('attachments') %>:</strong>
      <% @client_journal.client_journal_attachments.each do |attachment| %>
          <%= render 'attachments/attachment_show_only', :attachment => attachment %>
      <% end %>
    </p>
  </div>
</div>
