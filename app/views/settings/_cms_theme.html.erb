<%= form_tag(set_theme_settings_path, method: 'post',  class: 'form-horizontal' ) do |f| %>
    <legend class="no-padding margin-bottom-10">Layout Options</legend>
    <section>
      <label><input type="checkbox" name="header" id="smart-fixed-header" <%= @theme_setting["header"].present? ? 'checked' : ''%> class="checkbox style-0"><span>Fixed Header</span></label>
      <label><input type="checkbox" name="footer" id="smart-fixed-footer" <%= @theme_setting["footer"].present? ? 'checked' : ''%> class="checkbox style-0"><span>Fixed Footer</span></label>
      <label><input type="checkbox" name="container" id="smart-fixed-container" <%= @theme_setting["container"].present? ? 'checked' : ''%> class="checkbox style-0"><span>Inside <b>.container</b></span></label>
      <label><input type="checkbox" name="topmenu" id="smart-topmenu" <%= @theme_setting["topmenu"].present? ? 'checked' : ''%> class="checkbox style-0"><span>Menu on <b>top</b></span></label>
      <span id="smart-bgimages"></span>
    </section>
    <section>
    </section>
    <h6 class="margin-top-10 semi-bold margin-bottom-5">CMS Skins</h6>
    <section id="smart-styles">
      <span  id="smart-style-0" data-skinlogo="img/logo.png" class="btn btn-block btn-xs txt-color-white margin-right-5" style="background-color:#4E463F;">Smart Default</span>
      <span  id="smart-style-1" data-skinlogo="img/logo-white.png" class="btn btn-block btn-xs txt-color-white" style="background:#3A4558;">Dark Elegance</span>
      <span  id="smart-style-2" data-skinlogo="img/logo-blue.png" class="btn btn-xs btn-block txt-color-darken margin-top-5" style="background:#fff;">Ultra Light</span>
      <span  id="smart-style-3" data-skinlogo="img/logo-pale.png" class="btn btn-xs btn-block txt-color-white margin-top-5" style="background:#f78c40">Google Skin</span>
      <span  id="smart-style-4" data-skinlogo="img/logo-pale.png" class="btn btn-xs btn-block txt-color-white margin-top-5" style="background: #bbc0cf; border: 1px solid #59779E; color: #17273D !important;">PixelSmash</span>
      <span  id="smart-style-5" data-skinlogo="img/logo-pale.png" class="btn btn-xs btn-block txt-color-white margin-top-5" style="background: rgba(153, 179, 204, 0.2); border: 1px solid rgba(121, 161, 221, 0.8); color: #17273D !important;">Glass</span>
      <%= hidden_field_tag :theme_style,@theme_setting["theme_style"] %>
      <div class="form-group margin-top-10" >
        <div class="col-xs-12">
          <%= submit_tag t('button_save'), class: 'btn btn-primary pull-right' %>
        </div>
      </div>
    </section>

<% end %>

<script>
  $(function(){

    $('span[id^=smart-style]').on('click', function(){
      id = $(this).attr('id')
      $('#theme_style').val(id)
      $('body').removeClass("smart-style-0");
      $('body').removeClass("smart-style-1");
      $('body').removeClass("smart-style-2");
      $('body').removeClass("smart-style-3");
      $('body').removeClass("smart-style-4");
      $('body').removeClass("smart-style-5");
      $('body').addClass(id);

      $('html').removeClass("smart-style-0");
      $('html').removeClass("smart-style-1");
      $('html').removeClass("smart-style-2");
      $('html').removeClass("smart-style-3");
      $('html').removeClass("smart-style-4");
      $('html').removeClass("smart-style-5");
      $('html').addClass(id)
    })
    $('#smart-fixed-header').on('change', function(){
      if($(this).prop('checked'))
      {
        $('body').addClass('fixed-header')

      }
      else {
        $('body').removeClass('fixed-header')
      }
    })

    $('#smart-fixed-footer').on('change', function(){
      if($(this).prop('checked'))
      {
        $('body').addClass('fixed-page-footer')
      }
      else {
        $('body').removeClass('fixed-page-footer')
      }
    })

    $('#smart-fixed-container').on('change', function(){
      if($(this).prop('checked'))
      {
        $('body').addClass('container')
      }
      else {
        $('body').removeClass('container')
      }
    })
    $('#smart-topmenu').on('change', function(){
      if($(this).prop('checked'))
      {
        $('body').addClass('menu-on-top')
      }
      else {
        $('body').removeClass('menu-on-top')
      }
    })
  })
</script>