<table class="table table-responsive table-bordered">
  <thead>
  <tr>
    <th><%= t :insurance %></th>
    <th><%= 'created at' %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% if insurances.any? %>
      <% insurances.each do |insurance| %>
          <tr>
            <td><%= link_to insurance.name, insurance_path(insurance) %></td>
            <td><%= format_date insurance.created_at %></td>
            <td><%= edit_link edit_insurance_path(insurance) %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
