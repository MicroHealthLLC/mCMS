<div class="row">
  <div class="col-xs-12 btn-edition">
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
      <ul class="dropdown-menu dropdown-links" role="menu">
        <% if @document.can?(:delete_documents, :manage_documents, :manage_roles) %>
          <li>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <%= link_to('Delete', document_path(@document), class: 'dropdown-item',
                          :method => :delete,
                          :data => {:confirm => t(:text_are_you_sure)})
              %>
          </li>
          <div class='dropdown-item-dividier'></div>
        <% end %>
        <% if params[:action] == 'show' %>
          <% if @document.can?(:edit_documents, :manage_documents, :manage_roles) %>
            <li>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
              <%= link_to 'Edit', edit_client_document_path(@document), class: 'dropdown-item' %>
            </li>
            <div class='dropdown-item-dividier'></div>
         <% end %>
        <% else %>
          <% if @document.can?(:show_documents, :manage_documents, :manage_roles) %>
            <li>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
              <%= link_to 'Show', document_path(@document), class: 'dropdown-item' %>
            </li>
            <div class='dropdown-item-dividier'></div>
         <% end %>
        <% end %>

          <li>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            <%= link_to 'Cancel', back_url(@document), class: 'dropdown-item' %>
          </li>
          <div class='dropdown-item-dividier'></div>
          <li>
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
            <%= link_to 'Print', document_path(@document, format: 'pdf'), class: 'dropdown-item' %>
          </li>
        <% if can?(:add_notes, :manage_roles) %>
            <div class='dropdown-item-dividier'></div>
         <li>
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            <%= link_to t('add_note'), new_note_path(type: 'DocumentNote', owner_id: @document.id), class: 'dropdown-item' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
