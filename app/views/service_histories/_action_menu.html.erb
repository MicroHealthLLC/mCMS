<div class="col-xs-12 btn-edition">
  <%= link_to( 'Delete', service_history_path(@service_history), class: 'btn btn-danger pull-right',
               :method => :delete,
               :data => {:confirm => t(:text_are_you_sure)}) if @service_history.can?(:manage_roles, :manages_service_histories, :delete_service_histories)
  %>
  <%= link_to( 'Edit', edit_service_history_path(@service_history), class: 'btn btn-success pull-right') if @service_history.can?(:manage_roles, :manages_service_histories, :edit_service_histories) %>
  <%= link_to t('button_cancel'), service_histories_path, class: 'btn btn-warning pull-right' %>
  <%#= link_to t('button_print'), service_history_path(@service_history, format: 'pdf'), class: 'btn btn-primary pull-right' %>
</div>
