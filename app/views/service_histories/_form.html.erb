fieldset>
<legend></legend>
<%= form_for(service_history, html: { class: 'form-horizontal',  :multipart => true}) do |f| %>
    <% if service_history.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(service_history.errors.count, "error") %> prohibited this service history from being saved:</h2>

          <ul>
            <% service_history.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :user_id %>

    <div class="form-group">
      <%= f.label t(:rank), class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.select :rank_id, options_for_select(Rank.active.pluck(:name, :id), selected: f.object.rank.try(:id)) , {} ,{class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label t(:service_type), class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.select :service_type_id, options_for_select(ServiceType.active.pluck(:name, :id), selected: f.object.service_type.try(:id)) , {} ,{class: 'form-control'} %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label t(:service_status), class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.select :service_status_id, options_for_select(ServiceStatus.active.pluck(:name, :id), selected: f.object.service_status.try(:id)) , {} ,{class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label t(:component), class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.select :component_id, options_for_select(Component.active.pluck(:name, :id), selected: f.object.component.try(:id)) , {} ,{class: 'form-control'} %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label t(:discharge_type), class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.select :discharge_type_id, options_for_select(DischargeType.active.pluck(:name, :id), selected: f.object.discharge_type.try(:id)) , {} ,{class: 'form-control'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date_entered , class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :date_entered , class: 'form-control date_picker' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :end_active_obliged_service , class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :end_active_obliged_service , class: 'form-control date_picker' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :demobilization , class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :demobilization , class: 'form-control date_picker' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :separation , class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :separation , class: 'form-control date_picker' %>
      </div>
    </div>
     <div class="form-group">
      <%= f.label :temporary_disability_retirement_list , class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :temporary_disability_retirement_list , class: 'form-control date_picker' %>
      </div>
    </div>
     <div class="form-group">
      <%= f.label :permanent_disability_retirement_list , class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :permanent_disability_retirement_list , class: 'form-control date_picker' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label t(:note) , class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= f.text_area :note , class: 'form-control ck-editor' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-12">
        <%= f.label t(:attachments) , class: 'col-md-2 control-label' %>
      </div>
      <%= f.simple_fields_for :service_history_attachments do |attachment| %>
          <%= render 'attachments/attachment_show', :f => attachment %>
      <% end %>
      <div id="attachment_fields" class="col-md-2 margin-top-10 " style="padding-right: 2px;" >
        <%= link_to_add_association 'add file', f, :service_history_attachments, class: 'btn btn-success pull-right', partial: 'attachments/attachment_fields' %>
      </div>
    </div>

    <div class="form-group" >
      <div class="col-md-11">
        <%= link_to t('button_cancel'), service_histories_path, class: 'btn btn-warning pull-right' %>
        <%= f.submit t(:button_save), class: 'btn btn-primary pull-right' %>
      </div>
    </div>
<% end %>
</fieldset>

