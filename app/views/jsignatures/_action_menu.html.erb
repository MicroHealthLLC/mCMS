<div class="col-xs-12 btn-edition tabs-section">
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
    <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:200px;">
      <% if User.current_user.admin? %>
          <li>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <%= link_to('Delete', jsignature_path(@jsignature), class: 'dropdown-item',
                        :method => :delete,
                        :data => {:confirm => t(:text_are_you_sure)})
            %>
          </li>
          <div class='dropdown-item-dividier'></div>
      <% end %>

      <li>
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        <% if @owner.is_a? User %>
            <%= link_to 'Cancel', '/profile_record#tabs-signature', class: 'dropdown-item' %>
        <% elsif @owner.is_a? Case %>
            <%= link_to 'Cancel', case_path(@owner) + '#tabs-signatures', class: 'dropdown-item' %>
        <% else %>
            <%= link_to 'Cancel', @owner, class: 'dropdown-item' %>
        <% end %>
      </li>
      <div class='dropdown-item-dividier'></div>

      <li>
        <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
        <%= link_to 'Print', jsignature_path(@jsignature, format: :pdf), class: 'dropdown-item' %>
      </li>
      <div class='dropdown-item-dividier'></div>

      <li>
        <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
        <%= link_to 'Print Signature', image_jsignature_path(@jsignature, format: :pdf), class: 'dropdown-item' %>
      </li>
    </ul>
  </div>
</div>
