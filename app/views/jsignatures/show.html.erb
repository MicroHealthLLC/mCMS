<%= render partial: 'action_menu' %>
<div class="row">
  <div class="col-xs-12">

    <p>
      <strong>Person name:</strong>
      <%= @jsignature.person_name %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @jsignature.user %>
    </p>

     <p>
      <strong>Created at:</strong>
      <%= format_date_time @jsignature.created_at %>
    </p>

    <% if @jsignature.case %>
        <p>
          <strong>Case:</strong>
          <%= link_to_case @jsignature.case %>
        </p>
    <% else %>
        <p>
          <strong>Appointment:</strong>
          <%= link_to @jsignature.appointment, appointment_path(@jsignature.appointment )%>
        </p>
    <% end %>

    <p>
      <strong>Signature:</strong>
      <%= image_tag @jsignature.signature.html_safe, class: 'img-responsive' %>
    </p>

  </div>
</div>