<div class="col-xs-12 btn-edition">
  <%= link_to( 'Delete', news_path(@news), class: 'btn btn-danger pull-right',
              :method => :delete,
              :data => {:confirm => t(:text_are_you_sure)}) if @news.can?(:delete_news, :manage_news, :manage_roles)
  %>
  <%= link_to 'Edit', edit_news_path(@news), class: 'btn btn-success pull-right'  if @news.can?(:edit_news, :manage_news, :manage_roles) %>
  <%= link_to( t('add_note'), new_note_path(type: 'PostNote', owner_id: @news.id), class: 'btn btn-success pull-right') if can?(:add_notes, :manage_roles) %>
  <%= link_to t('button_cancel'), news_index_path, class: 'btn btn-warning pull-right' %>
  <%= link_to t('button_print'), news_path(@news, format: 'pdf'), class: 'btn btn-primary pull-right' %>
</div>
