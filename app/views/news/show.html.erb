
<div class="col-xs-12 btn-edition">
  <%= link_to 'Delete', news_path(@news), class: 'btn btn-danger pull-right',
              :method => :delete,
              :data => {:confirm => t(:text_are_you_sure)}
  %>
  <%= link_to 'Edit', edit_news_path(@news), class: 'btn btn-success pull-right' %>
  <%= link_to( t('add_note'), new_note_path(type: 'PostNote', owner_id: @news.id), class: 'btn btn-success pull-right') if can?(:add_notes, :manage_roles) %>
  <%= link_to t('button_cancel'), news_index_path, class: 'btn btn-warning pull-right' %>
  <%= link_to t('button_print'), news_path(@news, format: 'pdf'), class: 'btn btn-primary pull-right' %>
</div>
<article class="news-article">
  <header>
    <h3><%= avatar(@news.user) %>
      <%= link_to h(@news.title), news_path(@news) %>
      <%= "(#{t(:label_x_comments, :count => @news.post_notes.count)})" if @news.post_notes.count > 0 %>
    </h3>
    <p class="author"><%= authoring @news.created_at, @news.user %></p>
  </header>
  <div class="wiki">
    <%= @news.summary.html_safe %>
  </div>
 <div class="wiki">
    <%= @news.description.html_safe %>
  </div>

  <p>
    <strong><%= t('attachments') %>:</strong>
    <% @news.post_attachments.each do |attachment| %>
        <%= render 'attachments/attachment_show_only', :attachment => attachment %>
    <% end %>
  </p>
</article>