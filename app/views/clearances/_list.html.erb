<table class="table table-responsive table-bordered">
  <thead>
  <tr>
    <th><%= t('enumeration_clearence_type') %></th>
    <th><%= t('education_date_received') %></th>
    <th><%= t('education_date_expired') %></th>
  </tr>
  </thead>

  <tbody>
  <% if @clearances.any? %>
      <% @clearances.each do |clearance| %>
          <tr>
            <td><%= link_to clearance.clearence_type, clearance_path(clearance)%></td>
            <td><%= clearance.date_received %></td>
            <td><%= clearance.date_expired %></td>

          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
