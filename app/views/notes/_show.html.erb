<div class="col-xs-12">
  <p>
    <strong>User:</strong>
    <%= @note.user %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= @note.created_at.to_date %>
  </p>

   <p>
    <strong>Update at:</strong>
    <%= @note.updated_at.to_date %>
  </p>

  <% if @note.object.class != News %>
      <p>
        <strong>Belongs to:</strong>
        <%= link_to @note.object.to_s, @note.object %>
      </p>
  <% end %>

  <p>
    <strong>Note:</strong>
    <%= @note.note.html_safe %>
  </p>
  
</div>