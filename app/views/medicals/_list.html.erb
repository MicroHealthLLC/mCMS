<table class="table table-responsive" id="medicals_table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Snomed</th>
    <th>Medical facility</th>
    <th>Date of diagnosis</th>
    <th>Medical history status</th>
    <th>Medical history type</th>

  </tr>
  </thead>

  <tbody>
  <% @medicals.each do |medical| %>
      <tr>
        <td><%= link_to_edit_if_can medical.name, {ctrl: :medicals, object: medical } %></td>
        <td><%= link_to_edit_if_can medical.snomed, {ctrl: :medicals, object: medical } %></td>
        <td><%= medical.medical_facility %></td>
        <td><%= format_date medical.date_of_diagnosis %></td>
        <td><%= medical.medical_history_status %></td>
        <td><%= medical.medical_history_type %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
    initDataTable('medicals_table')
  })
</script>
