<table class="table table-responsive" id="injury_table">
  <thead>
  <tr>
    <th>Injury Name</th>
    <th>Snomed</th>
    <th>Injury type</th>
    <th>Injury cause</th>
    <th><%= 'Snmed cause' %></th>
    <th>Injury status</th>
    <th>Employer</th>
    <th>Date of injury</th>
    <th>Date resolved</th>
  </tr>
  </thead>

  <tbody>
  <% @injuries.each do |injury| %>
      <tr>
       
        <td><%= link_to injury.injury_name, injury %></td>
        <td><%= injury.snomed_occupation %></td>
        <td><%= injury.injury_type %></td>
        <td><%= injury.injury_cause_name %></td>
        <td><%= injury.snomed_event %></td>
        <td><%= injury.injury_status %></td>
        <td><%= injury.employer %></td>
        <td><%= injury.date_of_injury %></td>
        <td><%= format_date injury.date_resolved %></td>
        </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    initDataTable('injury_table')
  })
</script>
