<% unless User.current.admin? %>
    <div class="row">
      <div class="col-xs-11 btn-edition">
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
          <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:170px;">
            <% if can?(:add_notes, :manage_roles) %>
              <li>
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                <%= link_to t('new_note'), new_note_path(type: 'AttemptNote', owner_id: attempt.id), class: 'dropdown-item' %>
              </li>
              <div class='dropdown-item-dividier'></div>
            <% end %>

            <li>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
              <%= link_to 'Show', survey_attempt_path( attempt), class: 'dropdown-item' %>
            </li>
            <div class='dropdown-item-dividier'></div>

            <li>
              <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
              <%= link_to 'Cancel', attempts_path(survey_id: attempt.survey.id, case_id: attempt.participant_id), class: 'dropdown-item' %>
            </li>
            <div class='dropdown-item-dividier'></div>

            <li>
              <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
              <%= link_to 'Print', survey_attempt_path( attempt, format: :pdf), class: 'dropdown-item' %>
            </li>
          </ul>
        </div>
      </div>
    </div>
<% end %>
