<table class="table  table-responsive">
  <thead>
  <tr>
    <th><%= t :label_name %></th>
    <th><%= t :organization_type %></th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% if organizations.any? %>
      <% organizations.each do |organization| %>
          <tr>
            <td><%= organization.name %></td>
            <td><%= organization.organization_type %></td>
            <td><%= edit_link( edit_organization_path(organization)) %></td>
            <td><%= delete_link( organization)%></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="4"><%= t('label_no_data') %></td>
      </tr>
  <% end %>

  </tbody>
</table>
