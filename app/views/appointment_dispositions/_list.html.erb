<%= link_to( 'Add Disposition', new_appointment_disposition_path(appointment_id: @appointment.id), class: 'btn btn-primary pull-right') if can?(:add_captures, :manage_roles) %>

<table  class="table table-bordered table-responsive" id="appointment_dispositions_table">
  <thead>
  <tr>
    <th>Disposition</th>
    <th>Date Recorded</th>
  </tr>
  </thead>

  <tbody>

  <% captures.each do |capture| %>
      <tr>
        <td><%= link_to capture.disposition, capture %></td>
        <td><%= capture.date_recorded   %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function(){
        initDataTable('appointment_dispositions_table');
    } );
</script>
