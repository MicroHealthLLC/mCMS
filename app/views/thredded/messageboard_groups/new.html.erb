<% content_for :thredded_page_title, t('thredded.messageboard_group.create') %>
<% content_for :thredded_page_id, 'messageboard-groups-new' %>
<% content_for :thredded_breadcrumbs do %>
  <ul class="navigation-breadcrumbs">
    <li class="navigation-breadcrumbs--item-no-link">
      <%= t('thredded.messageboard_group.create') %>
    </li>
  </ul>
<% end %>

<%= thredded_page do %>
  <%= form_for @messageboard_group, html: { class: 'form' } do |f| %>
    <ul class="form-list">
      <li>
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
      </li>

      <li><%= f.submit t('thredded.messageboard_group.create'), class: 'form--submit' %></li>
    </ul>
  <% end %>
<% end %>
