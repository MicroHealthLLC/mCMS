<% content_for :thredded_page_title, t('thredded.messageboard_group.create') %>
<% content_for :thredded_page_id, 'messageboard-groups-new' %>

<%= thredded_page do %>
  <%= form_for @messageboard_group, html: { class: 'form-horizontal' } do |f| %>

        <div class="form-group">
          <%= f.label :name, class: 'col-md-2 control-label' %>
          <div class="col-md-9">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>


        <div class="form-group" >
          <div class="col-md-11">
            <%= link_to t('button_cancel'), messageboards_path, class: 'btn btn-warning pull-right' %>
            <%= f.submit t('thredded.messageboard_group.create'), class: 'btn btn-success pull-right' %>
          </div>
        </div>
  <% end %>
<% end %>
