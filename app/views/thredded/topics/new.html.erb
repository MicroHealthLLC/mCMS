<% content_for :thredded_page_title, 'Create a New Topic' %>
<% content_for :thredded_page_id, 'new-topic' %>

<%= thredded_page do %>
  <%= render 'thredded/topics/form',
             messageboard: messageboard,
             topic:        @new_topic,
             css_class:    'is-expanded',
             placeholder:  t('thredded.topics.form.title_placeholder_start') %>
  <%= link_to t('button_cancel'), messageboard_topics_path(messageboard), class: 'btn btn-warning pull-right' %>
<% end %>
