<%= form_tag search_path(messageboard),
             method: 'get',
             class: 'horizontal-form',
             'data-thredded-turboform' => true do %>
    <div class="form-group">
      <%= label_tag :q, t('thredded.search.form.label'), class: 'col-md-2 control-label' %>
      <div class="col-xs-7">
        <%= text_field_tag :q, @query,
                           type:        'search',
                           required:    true,
                           # If there are no results the user will likely want to change the query, so auto-focus.
                           autofocus:   @query.presence && !@topics.presence,
                           placeholder: t('thredded.search.form.placeholder'),
                           class: 'form-control'%>
      </div>
    </div>



    <button type="submit" class="btn btn-primary pull-right col-xs-2"><%= t 'thredded.search.form.btn_submit' %></button>
<% end %>
