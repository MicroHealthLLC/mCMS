
<table class="table table-responsive " id="files_table">
  <thead>
  <tr>
    <th><%= 'Module' %></th>
    <th><%= 'File Name' %></th>
    <th><%= 'Date' %></th>
  </tr>
  </thead>

  <tbody>
  <% @files.each do |attachment| %>
      <tr>
        <td>      <%= link_to attachment.owner.to_s,  attachment.owner %>    </td>
        <td>     <%= render 'attachments/file', attachment: attachment %>   </td>
        <td>      <%= format_date attachment.created_at %>    </td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function(){
         initDataTable('files_table')
    } );
</script>

