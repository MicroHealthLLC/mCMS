<% show_case = defined?(show_case_column) ? show_case_column : true %>
<table class="table table-bordered table-responsive" id="documents_table">
  <thead>
  <tr>
    <th><%= t(:title) %></th>
    <% if show_case and !params[:controller] == 'client_documents' %>
        <th><%= t(:case) %></th>
    <% end %>
    <th><%= t(:document_type)%></th>
    <th><%= t('label_date') %></th>
    <% if @appointment and can?(:manage_roles) %>
        <th></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% if documents.any? %>
      <% documents.each do |document| %>
          <tr>
            <td><%= link_to document.title, document_path(document) %></td>
            <% if show_case and !params[:controller] == 'client_documents' %>
                <td><%= link_to_case document.case %></td>
            <% end %>
            <td><%= document.document_type %></td>
            <td><%= format_date document.date %></td>
            <% if @appointment and can?(:manage_roles) %>
                <td><%= link_to "<i class='fa fa-unlink fa-lg'></i>".html_safe, unlink_appointment_path(appointment_id: @appointment.id, type: 'Document', id: document.id ) %></td>
            <% end %>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="9"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    <% if documents.present? %>  initDataTable('documents_table') <% end %>
  } );
</script>


