<% show_case = defined?(show_case_column) ? show_case_column : true %>
<table class="table table-bordered table-responsive" id="documents_table">
  <thead>
  <tr>
    <th><%= t(:title) %></th>
    <% if show_case %>
        <th><%= t(:case) %></th>
    <% end %>
    <th><%= t(:document_type)%></th>
    <th><%= t('label_date') %></th>
  </tr>
  </thead>

  <tbody>
  <% if documents.any? %>
      <% documents.each do |document| %>
          <tr>
            <td><%= link_to document.title, document_path(document) %></td>
            <% if show_case %>
                <td><%= link_to_case document.case %></td>
            <% end %>
            <td><%= document.document_type %></td>
            <td><%= document.date %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="9"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    <% if documents.present? %>  initDataTable('documents_table') <% end %>
  } );
</script>


