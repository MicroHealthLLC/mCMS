<div class="col-xs-12 btn-edition">
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
    <ul class="dropdown-menu dropdown-links" role="menu">
      <% if @document.can?(:delete_documents, :manage_documents, :manage_roles) %>
        <li>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <%= link_to('Delete', document_path(@document), class: 'dropdown-item',
                        :method => :delete,
                        :data => {:confirm => t(:text_are_you_sure)})
            %>
        </li>
        <div class='dropdown-item-dividier'></div>
      <% end %>
      <% if @document.can?(:edit_documents, :manage_documents, :manage_roles) %>
        <li>
          <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          <%= link_to 'Edit', edit_document_path(@document), class: 'dropdown-item' %>
        </li>
        <div class='dropdown-item-dividier'></div>
      <% end %>
        <li>
          <span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span>
          <%= link_to t('button_cancel'), back_url(@document), class: 'dropdown-item' %>
        </li>
        <div class='dropdown-item-dividier'></div>
        <li>
          <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
          <%= link_to t('button_print'), document_path(@document, format: 'pdf'), class: 'dropdown-item' %>
        </li>
      <% if can?(:add_notes, :manage_roles) %>
          <div class='dropdown-item-dividier'></div>
       <li>
          <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
          <%= link_to t('add_note'), new_note_path(type: 'DocumentNote', owner_id: @document.id), class: 'dropdown-item' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
