<%= render partial: 'action_menu' %>

<div class="row">
  <div class="col-xs-12">


    <p>
      <strong>Medication:</strong>
      <%= @immunization.immunization_cvx %>
    </p>

    <p>
      <strong>Total number of doses:</strong>
      <%= @immunization.total_number_of_doses %>
    </p>

    <p>
      <strong>Doses given:</strong>
      <%= @immunization.doses_given %>
    </p>

    <p>
      <strong>Next date due:</strong>
      <%= @immunization.next_date_due %>
    </p>

    <p>
      <strong>Date immunized:</strong>
      <%= @immunization.date_immunized %>
    </p>

    <p>
      <strong>Manufacturer:</strong>
      <%= @immunization.manufacturer %>
    </p>

    <p>
      <strong>Lot number:</strong>
      <%= @immunization.lot_number %>
    </p>

    <p>
      <strong>Expiration date:</strong>
      <%= @immunization.expiration_date %>
    </p>

    <p>
      <strong>Immnunization status:</strong>
      <%= @immunization.immunization_status %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @immunization.description.html_safe %>
    </p>

    <p>
      <strong><%= t('attachments') %>:</strong>
      <% @immunization.immunization_attachments.each do |attachment| %>
          <%= render 'attachments/attachment_show_only', :attachment => attachment %>
      <% end %>
    </p>
  </div>
</div>
