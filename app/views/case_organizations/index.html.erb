<%= link_to 'Print', params.permit(:from, :to, :status_type).merge(format: 'pdf'), class: 'pull-right btn btn-primary'  %>
<section id="widget-grid" class="show_group_account">
  <% if can?(:create_case_organizations, :manage_roles, :manage_case_organizations) %>
      <div class="btn-group pull-right btn-edition">
        <button class="btn btn-primary">
          Add Organization For
        </button>
        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <% @cases_for_btn.each do |c| %>
              <li>
                <%= link_to c, new_case_organization_path(case_id: c.id) %>
              </li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'case_organizations/list',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                     wid_id: 'case_organizations',
                     wid_title: 'Case Organizations'
                 } %>
    </article>
  </div>
</section>