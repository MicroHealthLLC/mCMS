<table class="table table-responsive " id="case_organizations_table">
  <thead>
  <tr>
    <% if params[:controller] != 'cases' %>
        <th>Case</th>
    <% end %>
    <th>Organization</th>
    <th>Association</th>
  </tr>
  </thead>

  <tbody>
  <% @case_organizations.each do |c_o| %>
      <tr>
        <% if params[:controller] != 'cases' %>
            <td><%= link_to_case c_o.case%></td>
        <% end %>
        <td><%= link_to c_o.organization, c_o.organization %></td>
        <td><%= link_to c_o.association_type, c_o %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
    initDataTable('case_organizations_table')
  } );
</script>
