
<table class="table table-responsive table-bordered" id="files_table">
  <thead>
  <tr>
    <th><%= 'Module' %></th>
    <th><%= t('case') %></th>
    <th><%= 'File Name' %></th>
    <th><%= 'Date' %></th>
  </tr>
  </thead>

  <tbody>
  <% @files.each do |attachment| %>
      <tr>
        <td>      <%= link_to attachment.owner,  attachment.owner %>    </td>
        <td>      <%= link_to_case attachment.owner.case %>    </td>
        <td>      <%= link_to(attachment.read_attribute(:file), attachment.file_url) %>    </td>
        <td>      <%= format_date attachment.created_at %>    </td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function(){
         initDataTable('files_table')
    } );
</script>

