
<table class="table table-responsive table-bordered">
  <thead>
  <tr>
    <% if User.current.can?(:manage_roles) and params[:my] %>
        <th>Client</th>
    <% end %>
    <th>Title</th>
    <th>Priority</th>
    <th>Type</th>
    <th>Status</th>
    <th>Category</th>
    <th>Date start</th>
    <th>Date due</th>
    <th>Date complete</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @cases.any? %>
      <% @cases.each do |c| %>
          <tr>
            <% if User.current.can?(:manage_roles) and params[:my] %>
                <td><%= link_to_user(c.user) %></td>
            <% end %>
            <td><%= link_to(c.title, case_path(c) ) %></td>
            <td><%= c.priority_type %></td>
            <td><%= c.case_type %></td>
            <td><%= c.case_status_type %></td>
            <td><%= c.case_category_type %></td>
            <td><%= c.date_start %></td>
            <td><%= c.date_due %></td>
            <td><%= c.date_completed %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>