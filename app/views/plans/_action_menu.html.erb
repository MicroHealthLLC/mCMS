  <div class="col-xs-12 btn-edition tabs-section">
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
      <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:210px;">
        <% if can?(:delete_plans, :manage_plans, :manage_roles) %>
          <li>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <%= link_to('Delete', plan_path(@plan), class: 'dropdown-item',
                          :method => :delete,
                          :data => {:confirm => t(:text_are_you_sure)}) 
              %>
          </li>
          <div class='dropdown-item-dividier'></div>
        <% end %>

        <% if params[:action] == 'show' %>
          <% if can?(:edit_plans, :manage_plans, :manage_roles) %>
            <li>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
              <%= link_to 'Edit', edit_plan_path(@plan), class: 'dropdown-item' %>
            </li>
            <div class='dropdown-item-dividier'></div>
          <% end %>
        <% else %>
          <% if can?(:show_plans, :manage_plans, :manage_roles) %>
            <li>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
              <%= link_to 'Show', plan_path(@plan), class: 'dropdown-item' %>
            </li>
            <div class='dropdown-item-dividier'></div>
          <% end %>
        <% end %>

          <li>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            <%= link_to 'Cancel', plan_back_url(@plan), class: 'dropdown-item' %>
          </li>
          <div class='dropdown-item-dividier'></div>

          <li>
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
            <%= link_to 'Print', plan_path(@plan, format: 'pdf'), class: 'dropdown-item' %>
          </li>
            <div class='dropdown-item-dividier'></div>

          <li>
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            <%= link_to 'History Changes', "/histories/#{@plan.class}/#{@plan.id}", class: 'dropdown-item' %>
          </li>

        <% if can?(:edit_plans, :manage_plans, :manage_roles) %>
            <div class='dropdown-item-dividier'></div>
          <li>
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
              <%= link_to 'Manage Actions', links_plan_path(@plan), class: 'dropdown-item' %>
          </li>
            <div class='dropdown-item-dividier'></div>
          <li>
            <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
              <%= link_to 'Link to Goals', link_goal_plan_path(@plan), class: 'dropdown-item' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
