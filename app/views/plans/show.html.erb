<div class="col-xs-12 btn-edition">
  <%= link_to( 'Delete', plan_path(@plan), class: 'btn btn-danger pull-right',
              :method => :delete,
              :data => {:confirm => t(:text_are_you_sure)}) if can?(:delete_plans, :manage_plans, :manage_roles)
  %>
  <%= link_to 'Edit', edit_plan_path(@plan), class: 'btn btn-success pull-right' if can?(:edit_plans, :manage_plans, :manage_roles) %>
  <%= link_to( t('add_note'), new_note_path(type: 'PlanNote', owner_id: @plan.id), class: 'btn btn-success pull-right') if can?(:add_notes, :manage_roles) %>
  <%= link_to t('button_cancel'), plans_path, class: 'btn btn-warning pull-right' %>
  <%= link_to t('button_print'), plan_path(@plan, format: 'pdf'), class: 'btn btn-primary pull-right' %>
</div>
<div class="col-xs-12">
<p>
  <strong>Name:</strong>
  <%= @plan.name %>
</p>

<p>
  <strong>Priority type:</strong>
  <%= @plan.priority_type %>
</p>

<p>
  <strong>Plan status:</strong>
  <%= @plan.plan_status %>
</p>

<p>
  <strong>Description:</strong>
  <%= @plan.description.html_safe %>
</p>

<p>
  <strong>Date start:</strong>
  <%= @plan.date_start %>
</p>

<p>
  <strong>Date due:</strong>
  <%= @plan.date_due %>
</p>

<p>
  <strong>Date completed:</strong>
  <%= @plan.date_completed %>
</p>
  
</div>


<%= render partial: 'notes/notes', locals: {notes: @plan.plan_notes} %>