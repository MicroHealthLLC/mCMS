<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Priority type</th>
      <th>Plan status</th>
      <th>Description</th>
      <th>Date start</th>
      <th>Date due</th>
      <th>Date completed</th>
      <th>User</th>
      <th>Case</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.priority_type_id %></td>
        <td><%= plan.plan_status_id %></td>
        <td><%= plan.description %></td>
        <td><%= plan.date_start %></td>
        <td><%= plan.date_due %></td>
        <td><%= plan.date_completed %></td>
        <td><%= plan.user_id %></td>
        <td><%= plan.case_id %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

