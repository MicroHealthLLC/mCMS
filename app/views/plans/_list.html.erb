<% show_case = defined?(show_case_column) ? show_case_column : true %>
<table class="table table-responsive table-bordered" id="plans_table">
  <thead>
  <tr>
    <th><%= t('label_name') %></th>
    <% if show_case %>
        <th><%= t('case') %></th>
    <% end %>
    <th><%= t('priority') %></th>
    <th><%= t('plan_status') %></th>
    <th><%= t('date_start') %></th>
    <th><%= t('date_due') %></th>
    <th><%= t('date_completed') %></th>
  </tr>
  </thead>

  <tbody>
  <% @plans.each do |plan| %>
      <tr>
        <td><%= link_to plan.name, plan %></td>
        <% if show_case %>
            <td><%= link_to_case plan.case %></td>
        <% end %>
        <td><%= plan.priority_type %></td>
        <td><%= plan.plan_status %></td>
        <td><%= plan.date_start %></td>
        <td><%= plan.date_due %></td>
        <td><%= plan.date_completed %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
    initDataTable('plans_table')
  } );
</script>