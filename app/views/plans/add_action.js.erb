<% if @task %>
$('#btn_<%= @task_id %>').html("<button class='btn tasks-btn btn-danger' onclick='btn_clicked(<%= @task_id %>)'> <%= t('button_remove') %></button>");
<% else %>
$('#btn_<%= @task_id %>').html("<button class='btn tasks-btn btn-success' onclick='btn_clicked(<%= @task_id %>)'> <%= 'Add' %></button>");
<% end %>