<section id="widget-grid" class="positions_section">
  <%= render partial: 'state_button_filter'%>
  <div class="btn-group pull-right btn-edition">
    <button class="btn btn-primary">
      Add Teleconsult For
    </button>
    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <% @cases_for_btn.each do |c| %>
          <li>
            <%= link_to c, new_teleconsult_path(case_id: c.id) %>
          </li>
      <% end %>
    </ul>
  </div>
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'list',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                     teleconsults: @teleconsults,
                     wid_id: 'teleconsults',
                     wid_title: t('teleconsults')
                 } %>
    </article>
  </div>
</section>
