<table class="table table-bordered" id="groups_table">
  <thead>
  <tr>
    <th> Group Name </th>
    <th> Leaders </th>
    <th> Members </th>
    <th> Actions </th>
  </tr>
  </thead>
  <tbody>
  <% @groups.each do |group| %>
      <tr>
        <td> <%= link_to group.name, group_path(group) %> </td>
        <td>
          <% if group.leaders.length > 0 %>
              <%= group.leader_names %>
          <% end %>
        </td>
        <td>
          <% if group.members.length > 0 %>
              <%= group.member_names %>
          <% end %>
        </td>
        <td>
          <%= link_to "Edit", edit_group_path(group), :class => "btn btn-primary " %>
          <%= link_to "Delete", group_path(group), method: :delete, :class => "btn btn-danger " %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    initDataTable('groups_table')
  } );
</script>