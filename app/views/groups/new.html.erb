<div class="panel panel-default">

  <div class="panel-body">
    <h3> New group </h3>
    <hr />
    <%= form_for @group do |f| %>
      <div class="col-md-4">
        <div class="row">
          <%= f.label :name %>
          <%= f.text_field :name, :class => "form-control" %>
        </div>
      </div>
      <br /><br /><br /><hr />
      <%= f.submit "Create", :class => "btn btn-primary" %>
    <% end %>
  </div>  
</div>