<div class="col-xs-12 btn-edition">
  <%= link_to 'Delete',  affiliation_path(@affiliation), class: 'btn btn-danger pull-right',
              :method => :delete,
              :data => {:confirm => t(:text_are_you_sure)}
  %>
  <%= link_to 'Edit', edit_affiliation_path(@affiliation), class: 'btn btn-success pull-right' %>
  <%= link_to t('button_cancel'), affiliations_path, class: 'btn btn-warning pull-right' %>
  <%= link_to t('button_print'), affiliation_path(@affiliation, format: 'pdf'), class: 'btn btn-primary pull-right' %>
</div>
<div class="col-xs-12">
  <p>
    <strong>Name:</strong>
    <%= @affiliation.name %>
  </p>

  <p>
    <strong>Affiliation Type:</strong>
    <%= @affiliation.affiliation_type %>
  </p>

  <p>
    <strong>Affiliation Status:</strong>
    <%= @affiliation.affiliation_status %>
  </p>

  <p>
    <strong>Date Start:</strong>
    <%= @affiliation.date_start %>
  </p>

  <p>
    <strong>Date End:</strong>
    <%= @affiliation.date_end %>
  </p>

  <p>
    <strong>Note:</strong>
    <%= @affiliation.note.html_safe %>
  </p>


  <p>
    <strong><%= t('attachments') %>:</strong>
    <% @affiliation.affiliation_attachments.each do |attachment| %>
        <%= render 'attachments/attachment_show_only', :attachment => attachment %>
    <% end %>
  </p>

  <%= render_extend_demography_information(@affiliation.affiliation_extend_demography) %>
</div>
