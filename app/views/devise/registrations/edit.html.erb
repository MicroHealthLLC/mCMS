<h2>Edit <%= resource_name.to_s.humanize %></h2>

  <div class="col-xs-12 btn-edition" style="padding-left:0;">
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
      <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:330px;">
      <% if User.current == User.current_user %>
        <li>
          <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
          <%= link_to 'Enable Two Factor Authentication', '/users/enable_authy', class: 'dropdown-item' %>
        </li>
        <div class='dropdown-item-dividier'></div>
      <% end %>
       <li>
         <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
          <%= link_to 'Print All', {}.merge(format: 'pdf'), class: 'dropdown-item' %>
        </li>
      </ul>
    </div>
  </div>

<%= render_tabs edit_user_page_tab %>
