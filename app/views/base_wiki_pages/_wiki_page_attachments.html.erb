<div class="form-group">
  <div class="col-md-12">
    <%= f.label t(:attachments) , class: 'col-md-2 control-label' %>
  </div>
  <%= f.simple_fields_for :wiki_page_attachments do |attachment| %>
      <%= render 'attachments/attachment_show', :f => attachment %>
  <% end %>
  <div id="attachment_fields" class="col-md-2 margin-top-10 " style="padding-right: 2px;" >
    <%= link_to_add_association 'add file', f, :wiki_page_attachments, class: 'btn btn-success pull-right', partial: 'attachments/attachment_fields' %>
  </div>
</div>
