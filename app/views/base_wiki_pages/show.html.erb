<h1>
  <% if @page.parent %>
      <%= link_to @page.parent.title,  @page.parent %> >
  <% end %>

  <%=h @page.title %>
</h1>

<%= wiki_page_actions %>

<section id="widget-grid" class="attempts_section">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

      <%= wiki_page_info %>

      <div class="wiki_content">
        <%=wiki_content @page.content.html_safe %>
      </div>

      <p>
        <strong><%= t('attachments') %>:</strong>
        <% @page.wiki_page_attachments.each do |attachment| %>
            <%= render 'attachments/attachment_show_only', :attachment => attachment %>
        <% end %>
      </p>

    </div>
  </div>
</section>
