
<div class="col-xs-12 btn-edition">
  <%= link_to 'Delete', wiki_page_path(@page), class: 'btn btn-danger pull-right',
              :method => :delete,
              :data => {:confirm => t(:text_are_you_sure)}
  %>
  <%= link_to 'Edit', wiki_page_edit_path(@page) , class: 'btn btn-success pull-right' if edit_allowed?  %>
  <%= link_to 'History', wiki_page_history_path(@page), class: 'btn btn-warning pull-right' if history_allowed? %>
  <%= link_to 'List pages', wiki_all_path, class: 'btn btn-primary pull-right' %>
</div>
