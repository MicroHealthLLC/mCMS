<%= wiki_page_style -%>
<div class="col-md-4 pull-right">
  <%= link_to( 'New Page', 'new', class: 'btn btn-primary pull-right margin-bottom-10', id: 'new_page_link')%>
</div>


<h1><%=wt 'All pages' %></h1>

<ul>
  <%= wiki_paginate @pages do -%>
    <% @pages.each do |page| -%>
      <li><%= link_to page.title, wiki_page_path( page ) %></li>
          <%= render_subpages(page).html_safe %>
    <% end -%>
  <% end -%>
</ul>