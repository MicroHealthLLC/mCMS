
<table class="table table-responsive" id="related_client_table">
  <thead>
  <tr>
    <th>Related client</th>
    <th>Relationship</th>
    <th>Date start</th>
    <th>Date end</th>
  </tr>
  </thead>

  <tbody>
  <% related_clients.each do |related_client| %>
      <tr>
        <td><%= link_to related_client.related_client, related_client %></td>
        <td><%= related_client.relationship %></td>
        <td><%= format_date related_client.date_start %></td>
        <td><%= format_date related_client.date_end %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
    initDataTable('related_client_table')
  })
</script>