<div class="col-xs-12 btn-edition">
  <%= link_to('Delete',  socioeconomic_path(@socioeconomic), class: 'btn btn-danger pull-right' ,
              :method => :delete,
              :data => {:confirm => t(:text_are_you_sure)}) if @socioeconomic.can?(:delete_socioeconomics, :manage_socioeconomics, :manage_roles)
  %>
  <% if params[:action] == 'show' %>
      <%= link_to 'Edit', edit_socioeconomic_path(@socioeconomic), class: 'btn btn-success pull-right' if @socioeconomic.can?(:edit_socioeconomics, :manage_socioeconomics, :manage_roles) %>
  <% else %>
      <%= link_to 'Show', socioeconomic_path(@socioeconomic), class: 'btn btn-success pull-right' if @socioeconomic.can?(:show_socioeconomics, :manage_socioeconomics, :manage_roles) %>
  <% end %>
  <%= link_to t('button_cancel'), socioeconomics_path, class: 'btn btn-warning pull-right' %>
  <%= link_to t('button_print'), socioeconomic_path(@socioeconomic, format: 'pdf'), class: 'btn btn-primary pull-right' %>
  <%= link_to t('button_history_changes'), "/histories/#{@socioeconomic.class}/#{@socioeconomic.id}", class: 'btn btn-primary pull-right' %>
</div>