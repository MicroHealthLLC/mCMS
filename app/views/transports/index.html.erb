<%= link_to 'Print', params.permit(:from, :to, :status_type).merge(format: 'pdf'), class: 'pull-right btn btn-primary'  %>
<section id="widget-grid" class="transports_section">
  <%= render partial: 'state_button_filter_with_remote', locals: {controller_name: 'transports', container: 'transports_container'} %>
  <% if can?(:create_transports, :manage_roles, :manage_transports) %>
      <div class="btn-group pull-right btn-edition">
        <button class="btn btn-primary">
          Add Transport For
        </button>
        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <% @cases_for_btn.each do |c| %>
              <li>
                <%= link_to c, new_transport_path(case_id: c.id) %>
              </li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'list',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                     wid_id: 'transports',
                     wid_title: t('transports')
                 } %>
    </article>
  </div>
</section>
