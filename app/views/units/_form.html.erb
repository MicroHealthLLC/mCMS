<%= simple_form_for(@unit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :unit_enum_id %>
    <%= f.input :unit_type_id %>
    <%= f.input :name %>
    <%= f.input :date_start %>
    <%= f.input :date_end %>
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
