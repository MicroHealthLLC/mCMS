<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Unit enum</th>
      <th>Unit type</th>
      <th>Name</th>
      <th>Date start</th>
      <th>Date end</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.user_id %></td>
        <td><%= unit.unit_enum_id %></td>
        <td><%= unit.unit_type_id %></td>
        <td><%= unit.name %></td>
        <td><%= unit.date_start %></td>
        <td><%= unit.date_end %></td>
        <td><%= unit.note %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

