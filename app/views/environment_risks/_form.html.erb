<%= simple_form_for(@environment_risk) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :icdcm_code_id %>
    <%= f.input :date_started %>
    <%= f.input :date_ended %>
    <%= f.input :environment_status_id %>
    <%= f.input :environment_type_id %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
