<p id="notice"><%= notice %></p>

<h1>Environment Risks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Icdcm code</th>
      <th>Date started</th>
      <th>Date ended</th>
      <th>Environment status</th>
      <th>Environment type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @environment_risks.each do |environment_risk| %>
      <tr>
        <td><%= environment_risk.user_id %></td>
        <td><%= environment_risk.icdcm_code_id %></td>
        <td><%= environment_risk.date_started %></td>
        <td><%= environment_risk.date_ended %></td>
        <td><%= environment_risk.environment_status_id %></td>
        <td><%= environment_risk.environment_type_id %></td>
        <td><%= environment_risk.description %></td>
        <td><%= link_to 'Show', environment_risk %></td>
        <td><%= link_to 'Edit', edit_environment_risk_path(environment_risk) %></td>
        <td><%= link_to 'Destroy', environment_risk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

