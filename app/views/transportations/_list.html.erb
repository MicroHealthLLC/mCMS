<table class="table table-responsive" id="transportations_table">
  <thead>
  <tr>
    <th>Transportation mean</th>
    <th>Transportation type</th>
    <th>Transportation accessibility</th>
    <th>Transportation status</th>
    <th>Estimated monthly cost</th>
    <th>Date start</th>
    <th>Date end</th>
  </tr>
  </thead>

  <tbody>
  <% @transportations.each do |transportation| %>
      <tr>
        <td><%= link_to_edit_if_can transportation.transportation_mean, {ctrl: :transportations, object: transportation } %></td>

        <td><%= transportation.transportation_type %></td>
        <td><%= transportation.transportation_accessibility %></td>
        <td><%= transportation.transportation_status %></td>

        <td><%= transportation.estimated_monthly_cost %></td>
        <td><%= format_date transportation.date_start %></td>
        <td><%= format_date transportation.date_end %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<script>
    $(document).ready(function(){
        initDataTable('transportations_table')
    })
</script>
