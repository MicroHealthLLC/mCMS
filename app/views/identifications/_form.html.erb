<%= simple_form_for([identification.object, identification],  html: {  class: 'form-horizontal' }) do |f| %>
    <% if identification.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(identification.errors.count, "error") %> prohibited this identification from being saved:</h2>

          <ul>
            <% identification.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :contact_id %>
    <%= f.hidden_field :type %>

    <div style="overflow: hidden;">

      <%= f.simple_fields_for :identifications do |identification| %>
          <%= render 'identifications/identification_fields', :f => identification %>
      <% end %>
    </div>
    <div class="">
      <div class="col-sm-4 col-md-3 col-lg-3"> </div>
      <div class="col-sm-8 col-md-9 col-lg-9">
        <div class="form-group" >
          <div class="col-md-11" >
            <%= link_to t('button_cancel'), identifications_path, class: 'btn btn-warning pull-right' %>
            <%= f.submit t('button_save'), class: 'btn btn-success pull-right' %>
          </div>
        </div>
      </div>
    </div>
<% end %>
