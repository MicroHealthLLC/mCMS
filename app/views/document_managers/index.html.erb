<% if @current_folder.parent %>
    <p> <%= link_to "<< Back".html_safe, document_managers_path(document_folder_id: @current_folder.parent.id) %></p>
<% elsif params[:document_folder_id]%>
    <p> <%= link_to "<< Back".html_safe, document_managers_path %></p>
<% end %>

<h2>Documents</h2>

<div class="row">
    <div class="col-xs-12 btn-edition">
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
        <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:180px;">
          <li>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <%= link_to('New Document', document_managers_path(@document_managers), class: 'dropdown-item',
                          :action => {var newdoc = document.getElementById("new_doc"); newdoc.click();}) 
              %>
          </li>
          <div class='dropdown-item-dividier'></div>

          <li>
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
            <%= link_to 'Print', document_managers_path(@document_managers, format: 'pdf'), class: 'dropdown-item' %>
          </li>
        </ul>
      </div>
    </div>    
  <div class="col-xs-12 col-sm-6 col-md-6" style="display:inline-block">

  </div>
  <div class="col-xs-12 col-sm-3 col-md-3" style="display:inline-block">
    <%= render partial: "document_managers/upload" %>
  </div>
  <div class="col-xs-12 col-sm-3 col-md-3" style="display:inline-block">
    <%= render partial: "document_managers/new_folder" %>
  </div>
</div>

