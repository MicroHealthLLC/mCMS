<!-- Document upload modal -->
<div class="modal fade" id="documentModal" tabindex="-1" role="dialog" aria-labelledby="documentModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="documentModal">Document Upload</h4>
      </div>
      <!-- Check if a user is logged in -->
      <!-- Check if user has permissions to upload -->
      <% if can_upload_documents(@category) %>
          <%= form_for :document, html: {class: 'form-horizontal', multipart: true }, url: document_managers_path, method: :post do |f| %>
              <%= render partial: "document_managers/form", locals: {f: f, include_revision: true} %>
          <% end %>
      <% else %>
          <div class="panel-heading">
            Sorry, you do not have permission to upload documents
            to this category.
          </div>
      <% end %>
    </div>
  </div>
</div>