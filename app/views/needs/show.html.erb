
<%= render partial: 'action_menu' %>
<div class="row">
  <div class="col-xs-12">
    <p>
      <strong>Case:</strong>
      <%= link_to_case @need.case %>
    </p>

    <p>
      <strong>Need enum:</strong>
      <%= @need.need_enum %>
    </p>

    <p>
      <strong>Priority:</strong>
      <%= @need.priority_type %>
    </p>

    <p>
      <strong>Need status:</strong>
      <%= @need.need_status %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @need.description.html_safe %>
    </p>

    <p>
      <strong>Date due:</strong>
      <%= @need.date_due %>
    </p>

    <p>
      <strong><%= t('date_completed') %>:</strong>
      <%= @need.date_completed %>
    </p>

    <p>
      <strong><%= t('date_identified') %>:</strong>
      <%= @need.date_identified %>
    </p>

  </div>
</div>


<% if module_enabled?('goals') %>
    <%#= link_to(t('new_goal'), new_goal_path(case_id: @case.id), class: 'btn btn-primary pull-right btn-edition') if can?(:create_goals, :manage_roles, :manage_goals) %>

    <div class="row">
      <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <%= render partial: 'goals/list',
                   layout: 'shared/smart_widget_wrapper',
                   locals: {
                       goals: @goals,
                       wid_id: 'goals',
                       wid_title: 'goals'
                   } %>
      </article>
    </div>
    <script>
      $(document).ready(function(){
        <% if @goals.present? %>  initDataTable('goals_table') <% end %>
      } );
    </script>

<% end %>

<span id="plans_tasks">
</span>
<%= render partial: 'notes/notes', locals: {notes: @need.need_notes} %>
