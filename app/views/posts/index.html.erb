<h1>News</h1>
<%= link_to( 'New post', new_post_path, class:'btn btn-primary pull-right margin-bottom-10') if can?(:create_news, :manage_roles, :manage_news)%>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.summary %></td>
      </tr>
    <% end %>
  </tbody>
</table>