<h1>News</h1>
<%= link_to( 'New post', new_post_path, class:'btn btn-primary pull-right margin-bottom-10') if can?(:create_news, :manage_roles, :manage_news)%>

<% @posts.each do |post| %>
    <%= render partial: 'post', locals: {post: post} %>
<% end %>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>