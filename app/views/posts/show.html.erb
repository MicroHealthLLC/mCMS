
<div class="col-xs-12 btn-edition">
  <%= link_to 'Delete', post_path(@post), class: 'btn btn-danger pull-right',
              :method => :delete,
              :data => {:confirm => t(:text_are_you_sure)}
  %>
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-success pull-right' %>
  <%= link_to( "Add note", new_note_path(type: 'PostNote', owner_id: @post.id), class: 'btn btn-success pull-right') if can?(:add_notes, :manage_roles) %>
  <%= link_to t('button_cancel'), posts_path, class: 'btn btn-warning pull-right' %>
  <%= link_to t('button_print'), post_path(@post, format: 'pdf'), class: 'btn btn-primary pull-right' %>
</div>
<article class="news-article">
  <header>
    <h3><%= avatar(@post.user) %>
      <%= link_to h(@post.title), post_path(@post) %>
      <%= "(#{t(:label_x_comments, :count => @post.post_notes.count)})" if @post.post_notes.count > 0 %>
    </h3>
    <p class="author"><%= authoring @post.created_at, @post.user %></p>
  </header>
  <div class="wiki">
    <%= @post.summary.html_safe %>
  </div>
 <div class="wiki">
    <%= @post.description.html_safe %>
  </div>

  <p>
    <strong><%= t('attachments') %>:</strong>
    <% @post.post_attachments.each do |attachment| %>
        <%= render 'attachments/attachment_show_only', :attachment => attachment %>
    <% end %>
  </p>
</article>