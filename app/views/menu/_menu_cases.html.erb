<% if !User.current.allowed_to?(:manage_roles) or session[:employee_id] %>
    <li>
      <a href="#" id="ul_case"><i class="fa fa-lg fa-fw fa-square"></i> <span class="menu-item-parent">Cases</span></a>
      <ul id="case_menu">
        <li class="<%= menu_active?('cases') %>">
          <a href="<%= cases_path %>" title="<%= t(:cases) %>"><i class="fa fa-lg fa-fw fa-square"></i><span class="menu-item-parent"><%= t(:cases) %></span></a>
        </li>

        <% if module_enabled? 'checklists' %>
            <li class="<%= menu_active?('checklists') %>">
              <a href="<%= checklist_templates_path %>" title="<%= t(:checklists) %>"><i class="fa fa-lg fa-fw fa-check"></i> <span class="menu-item-parent"><%= t(:checklists) %></span></a>
            </li>
        <% end %>

        <% if module_enabled?( 'tasks') %>
            <li class="<%= menu_active?('tasks') %>">
              <a href="<%= tasks_path %>" title="<%= t :tasks %>"><i class="fa fa-lg fa-fw fa-tasks"></i> <span class="menu-item-parent"><%= t(:tasks) %></span></a>
            </li>
        <% end %>

        <% if module_enabled? 'surveys' %>
            <li class="<%= menu_active?('surveys') %>">
              <a href="<%= surveys_path %>" title="<%= t(:surveys) %>"><i class="fa fa-lg fa-fw fa-question"></i><span class="menu-item-parent"><%= t(:surveys) %></span></a>
            </li>
        <% end %>

        <% if module_enabled? 'documents' %>
            <li class="<%= menu_active?('documents') %>">
              <a href="<%= documents_path %>" title="<%= t(:documents) %>"><i class="fa fa-lg fa-fw fa-book"></i> <span class="menu-item-parent"><%= t(:documents) %></span></a>
            </li>
        <% end %>

        <% if module_enabled? 'cases' %>
            <li class="<%= menu_active?('cases') %>">
              <a href="<%= cases_path %>" title="<%= t(:cases) %>"><i class="fa fa-lg fa-fw fa-square"></i><span class="menu-item-parent"><%= t(:cases) %></span></a>
            </li>
        <% end %>

      </ul>
    </li>


<% else %>
    <% if module_enabled? 'cases' %>
        <li class="<%= menu_active?('cases') %>">
          <a href="<%= cases_path(my: User.current.id) %>" title="<%= t(:my_cases) %>"><i class="fa fa-lg fa-fw fa-square"></i><span class="menu-item-parent"><%= t(:my_cases) %></span></a>
        </li>
    <% end %>
<% end %>