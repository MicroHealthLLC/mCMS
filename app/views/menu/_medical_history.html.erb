<% unless User.current.allowed_to?(:manage_roles) %>
    <li>
      <a href="#" id="ul_medical_history"><i class="fa fa-lg fa-fw fa-film"></i> <span class="menu-item-parent">Medical History</span></a>
      <ul id="medical_history_menu">
        <% if module_enabled?( 'admissions') && can?(:manage_roles, :view_admissions, :manage_admissions)%>
            <li class="<%= menu_active?('admissions') %>">
              <a href="/admissions" title="<%= t(:admission) %>"><i class="fa fa-lg fa-fw fa-circle"></i> <span class="menu-item-parent"><%= t(:admission) %></span></a>
            </li>
        <% end %>
        <% if module_enabled?( 'health_care_facilities') && can?(:manage_roles, :view_health_care_facilities, :manage_health_care_facilities)%>
            <li class="<%= menu_active?('health_care_facilities') %>">
              <a href="/health_care_facilities" title="<%= t(:health_care_facility) %>"><i class="fa fa-lg fa-fw fa-circle"></i> <span class="menu-item-parent"><%= t(:health_care_facility) %></span></a>
            </li>
        <% end %>
       <% if module_enabled?( 'problem_lists') && can?(:manage_roles, :view_problem_lists, :manage_problem_lists)%>
            <li class="<%= menu_active?('problem_lists') %>">
              <a href="/problem_lists" title="<%= t(:problem_lists) %>"><i class="fa fa-lg fa-fw fa-circle"></i> <span class="menu-item-parent"><%= t(:problem_lists) %></span></a>
            </li>
        <% end %>
      </ul>
    </li>
<% end %>
