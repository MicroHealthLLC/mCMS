<table class="table " id="categories_table">
  <thead>
  <tr>
    <th> Category Name </th>
    <th> Private </th>
    <th> Writable </th>
    <th> Featured </th>
    <th> </th>
    <th> </th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td> <%= category.name %> </td>
        <td> <%=  category.is_private %> </td>
        <td> <%=  category.is_writable %> </td>
        <td> <%=  category.is_featured %> </td>
        <td> <%= edit_link edit_category_path(category) %> </td>
        <td> <%= delete_link category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
  <% end %>

  </tbody>
</table>
<script>
  $(document).ready(function(){
    initDataTable('categories_table')
  } );
</script>
