<section id="widget-grid" class="categories_account">
  <%= render partial: 'action_menu' %>
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'form',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                         category: @category,
                         wid_id: 'category',
                         wid_title: 'Edit category'
                 } %>
    </article>
  </div>
  <% if @categories %>
      <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= render partial: 'list',
                     layout: 'shared/smart_widget_wrapper',
                     locals: {
                         wid_id: 'categories',
                         wid_title: ' '
                     } %>
        </article>
      </div>
  <% end %>

</section>
