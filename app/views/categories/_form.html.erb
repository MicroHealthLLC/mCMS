<fieldset>
  <legend></legend>
  <%= simple_form_for(@category, html: { class: 'form-horizontal' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.label t('label_name'), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :name , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_area :description, class: 'form-control ck-editor' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :owning_group  , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.select :group_id, @groups, {include_blank: true} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :parent_id , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.select :parent_id, @categories, {include_blank: true} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :is_private , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.check_box :is_private %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :is_writable , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.check_box :is_writable %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :is_featured  , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.check_box :is_featured %>
        </div>
      </div>
      <div class="form-group" >
        <div class="col-md-11">
          <%= link_to t('button_cancel'), categories_path, class: 'btn btn-warning pull-right' %>
          <%= f.submit t('button_save'), class: 'btn btn-success pull-right' %>
        </div>
      </div>

  <% end %>
</fieldset>
