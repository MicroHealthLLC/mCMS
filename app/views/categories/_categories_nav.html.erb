<!-- Document upload button & modal -->
<%= render partial: "document_managers/upload" %>

<!-- Category list -->
<ul style="list-style-type: none; padding-left: 15px;" class="categories_nav" >
  <% categories.each_with_index do |root| %>
    <!-- Show root categories -->
    <li style="display:block-inline" value="root" class="<%= "cat-#{root.id}"%>" >
      <i class="fa fa-caret-right" onclick="getSubCategories(<%= root.id %>)"></i>
      <b> <%= link_to root.name, category_path(root, view_style: "grid") %> </b>
    </li>
    <br />
  <% end %>
</ul>