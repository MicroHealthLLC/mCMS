<div class="row">
  <div class="col-xs-12" style="padding:15px 25px 15px 25px;">
    <p>
      <strong><%= t('profile.first_name') %>:</strong>
      <%= @category.name %>
    </p>

    <p>
      <strong><%= t('description') %>:</strong>
      <%= @category.description.html_safe %>
    </p>

    <p>
      <strong><%= 'private' %>:</strong>
      <%= @category.is_private %>
    </p>

    <p>
      <strong><%= 'Writable' %>:</strong>
      <%= @category.is_writable %>
    </p>

    <p>
      <strong><%= 'Featured'%>:</strong>
      <%= @category.is_featured %>
    </p>
  </div>
</div>
