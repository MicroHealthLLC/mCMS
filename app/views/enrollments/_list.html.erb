<table class="table table-bordered table-responsive" id="enrollments_table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Enrollment Type</th>
    <th>Enrollment Status</th>
    <th>Date start</th>
    <th>Date end</th>
    <% if @appointment %>
       <th></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% enrollments.each do |enrollment| %>
      <tr>
        <td><%= link_to_edit_if_can enrollment.name, {ctrl: :enrollments, object: enrollment } %></td>
        <td><%= enrollment.enrollment_type %></td>
        <td><%= enrollment.enrollment_status %></td>
        <td><%= format_date enrollment.date_start %></td>
        <td><%= format_date enrollment.date_end %></td>
        <% if @appointment and can?(:manage_roles) %>
            <td><%= link_to "<i class='fa fa-unlink fa-lg'></i>".html_safe,
                            unlink_appointment_path(appointment_id: @appointment.id, type: 'Enrollment', id: enrollment.id ) %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function(){
        initDataTable('enrollments_table')
    } );
</script>
