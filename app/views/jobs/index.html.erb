<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Employer</th>
      <th>Application stage</th>
      <th>User</th>
      <th>Job app</th>
      <th>Position type</th>
      <th>Date</th>
      <th>Application status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.employer %></td>
        <td><%= job.application_stage_id %></td>
        <td><%= job.user_id %></td>
        <td><%= job.job_app_id %></td>
        <td><%= job.position_type_id %></td>
        <td><%= job.date %></td>
        <td><%= job.application_status_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

