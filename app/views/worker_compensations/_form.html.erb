<fieldset>
  <legend></legend>
  <%= form_for(worker_compensation, html: { class: 'form-horizontal',  :multipart => true}) do |f| %>
      <% if worker_compensation.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(worker_compensation.errors.count, "error") %> prohibited this Injury from being saved:</h2>

            <ul>
              <% worker_compensation.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= f.hidden_field :user_id %>
      <%= f.hidden_field :case_id %>

      <div class="form-group">
        <%= f.label t(:injury), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.select :injury_id, options_for_select(Injury.visible.map{|inj| [inj.to_s, inj.id] }, selected: f.object.injury.try(:id)) , {} ,{class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:compensation_type), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.select :compensation_type_id, options_for_select(CompensationType.active.pluck(:name, :id), selected: f.object.compensation_type.try(:id)) , {} ,{class: 'form-control'} %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t(:compensation_status), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.select :compensation_status_id, options_for_select(CompensationStatus.active.pluck(:name, :id), selected: f.object.compensation_status.try(:id)) , {} ,{class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :date_of_compensation_start , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :date_of_compensation_start, class: 'form-control date_picker' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :date_of_compensation_end , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :date_of_compensation_end, class: 'form-control date_picker' %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t(:description) , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_area :description , class: 'form-control ck-editor' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <%= f.label t(:attachments) , class: 'col-md-2 control-label' %>
        </div>
        <%= f.simple_fields_for :worker_compensation_attachments do |attachment| %>
            <%= render 'attachments/attachment_show', :f => attachment %>
        <% end %>
        <div id="attachment_fields" class="col-xs-2 margin-top-10 " style="padding-right: 2px;" >
          <%= link_to_add_association 'add file', f, :worker_compensation_attachments, class: 'btn btn-success pull-right', partial: 'attachments/attachment_fields' %>
        </div>
      </div>

      <div class="form-group" >
        <div class="col-md-11">
          <%= link_to t('button_cancel'), worker_compensations_path, class: 'btn btn-warning pull-right' %>
          <%= f.submit t(:button_save), class: 'btn btn-success pull-right' %>
        </div>
      </div>
  <% end %>
</fieldset>
