<table class="table table-responsive" id="legals_table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Legal History Type</th>
    <th>Legal History Status</th>
    <th>Date start</th>
    <th>Date end</th>
  </tr>
  </thead>

  <tbody>
  <% @legals.each do |legal| %>
      <tr>
        <td><%= link_to_edit_if_can legal.title, {ctrl: :legals, object: legal } %></td>
        <td><%= legal.legal_history_type %></td>
        <td><%= legal.legal_history_status %></td>
        <td><%= format_date legal.date_start %></td>
        <td><%= format_date legal.date_end %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
    initDataTable('legals_table')
  })
</script>
