
<table class="table table-responsive" id="forms_table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Form Type</th>
    <th>Organization</th>
    <th>Placement</th>
    <% if User.current.can?(:manage_roles) %>
        <th></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% formulars.each do |formular| %>
      <tr>
        <% if User.current.can?(:manage_roles) %>
            <td><%= link_to formular.name, edit_formular_path(formular) %></td>
        <% else %>
            <td><%= link_to formular.name, formular_path(formular) %></td>
        <% end %>
        <td><%= formular.description %></td>
        <td><%= formular.form_type %></td>
        <td><%= formular.organization %></td>
        <td><%= formular.emplacement %></td>
        <% if User.current.can?(:manage_roles) %>
            <td><%= delete_link formular, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function(){
        initDataTable('forms_table')
    })
</script>
