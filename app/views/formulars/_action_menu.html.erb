<div class="col-xs-12 btn-edition tabs-section">
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
    <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:210px;">
      <% if User.current.can?(:manage_roles) %>
          <% if @formular.can?(:manage_roles, :manages_formulars, :delete_formulars) %>
              <li>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <%= link_to('Delete', formular_path(@formular), class: 'dropdown-item',
                            :method => :delete,
                            :data => {:confirm => t(:text_are_you_sure)})
                %>
              </li>
              <div class='dropdown-item-dividier'></div>
          <% end %>

          <% if params[:action] == 'show' %>
              <% if @formular.can?(:manage_roles, :manages_formulars, :edit_formulars) %>
                  <li>
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    <%= link_to 'Edit', edit_formular_path(@formular), class: 'dropdown-item' %>
                  </li>
                  <div class='dropdown-item-dividier'></div>
              <% end %>
          <% else %>
              <% if @formular.can?(:manage_roles, :manages_formulars, :show_formulars) %>
                  <li>
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    <%= link_to 'Show', formular_path(@formular), class: 'dropdown-item' %>
                  </li>
                  <div class='dropdown-item-dividier'></div>
              <% end %>
          <% end %>

          <li>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            <%= link_to 'Cancel', formulars_path, class: 'dropdown-item' %>
          </li>
      <% else %>

          <li>
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
            <%= link_to "Add #{@formular.name}", new_formular_form_detail_path(@formular), class: 'dropdown-item' %>
          </li>
          <div class='dropdown-item-dividier'></div>
          <li>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            <%= link_to 'Cancel', formular_back_url, class: 'dropdown-item' %>
          </li>
      <% end %>
    </ul>
  </div>
</div>
