<%= render partial: 'action_menu' %>

<div class="row">
  <div class="col-xs-12">
    <p>
      <strong>Allergy type:</strong>
      <%= @allergy.allergy_type %>
    </p>

    <p>
      <strong>Medication:</strong>
      <%= @allergy.medication %>
    </p>

    <p>
      <strong>Allergy date:</strong>
      <%= @allergy.allergy_date %>
    </p>

    <p>
      <strong>Allergy status:</strong>
      <%= @allergy.allergy_status %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @allergy.description %>
    </p>

    <p>
      <strong><%= t('attachments') %>:</strong>
      <% @allergy.allergy_attachments.each do |attachment| %>
          <%= render 'attachments/attachment_show_only', :attachment => attachment %>
      <% end %>
    </p>
    
  </div>
</div>

