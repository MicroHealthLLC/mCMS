<table class="table table-responsive" id="allergy_table">
  <thead>
  <tr>
    <th>Allergy type</th>

    <th>Allergy date</th>
    <th>Allergy status</th>
  </tr>
  </thead>

  <tbody>
  <% @allergies.each do |allergy| %>
      <tr>
        <td><%= link_to allergy.allergy_type, allergy %></td>
        <td><%= format_date allergy.allergy_date %></td>
        <td><%= allergy.allergy_status %></td>
        </tr>
  <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
    initDataTable('allergy_table')
  })
</script>
