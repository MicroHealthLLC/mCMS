<%= render partial: 'action_menu' %>

<section id="widget-grid" class="checklists_account">
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'form',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                     case_support: @case_support,
                     wid_id: 'case_suport',
                     wid_title: t('edit_case_support')
                 } %>
    </article>

    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'extend_demographies/form2',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                     wid_id: 'extend_demography',
                     wid_title: 'Contact Information',
                     extend_demography: @case_support.extend_informations
                 } %>
    </article>
  </div>
</section>
<section id="widget-grid" class="identifications_section">
  <div class="col-xs-12 btn-edition tabs-section">

    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
      <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:210px;">
        <% if can?(:create_identifications, :manage_identifications, :manage_roles) %>
            <li>
              <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
              <%= link_to t(:new_identification), new_extend_demographies_identification_path( @case_support.extend_informations), class: 'dropdown-item' %>
            </li>
            <div class='dropdown-item-dividier'></div>
        <% end %>
        <li>
          <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
          <%= link_to 'Print', params.permit(:from, :to, :status_type).merge(format: 'pdf'), class: 'dropdown-item' %>
        </li>
        <div class='dropdown-item-dividier'></div>
        <li>
          <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
          <%= link_to 'Print All', params.permit(:from, :to, :status_type).merge(format: 'pdf'), class: 'dropdown-item' %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'extend_demographies/identifications/list',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                     identifications: @case_support.extend_informations.identifications,
                     wid_id: 'identifications',
                     wid_title: 'Identifications',
                     extend_demography: @case_support.extend_informations
                 } %>
    </article>
  </div>
</section>

