<table class="table table-bordered table-responsive" id="tasks_table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Task type</th>
    <th>Status</th>
    <th>Priority</th>
    <th>Date start</th>
    <th>Date due</th>
    <th>Date completed</th>
  </tr>
  </thead>

  <tbody>
  <% if tasks.any? %>
      <% tasks.each do |task| %>
          <tr>
            <td><%= link_to task.title, task %></td>
            <td><%= task.task_type %></td>
            <td><%= task.task_status_type %></td>
            <td><%= task.priority_type %></td>
            <td><%= task.date_start %></td>
            <td><%= task.date_due %></td>
            <td><%= task.date_completed %></td>
          </tr>
      <% end %>

  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>