
<table class="table table-responsive" id="referral_result_table">
  <thead>
  <tr>
    <th>User</th>
    <th>Result Date</th>
    <th>Result</th>

  </tr>
  </thead>

  <tbody>
  <% referral_results.each do |referral_result| %>
      <tr>
        <td><%= link_to referral_result.updated_by, referral_referral_result_path(referral_result) %></td>
        <td><%= format_date referral_result.result_date %></td>
        <td><%= referral_result.result.html_safe %></td>      
      </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    initDataTable('referral_result_table')
  })
</script>
