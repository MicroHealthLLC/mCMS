<table class="table table-responsive" id="daily_livings_table">
  <thead>
  <tr>
    <th>Daily living type</th>
    <th>Daily living status</th>
    <th>Date start</th>
    <th>Date end</th>
  </tr>
  </thead>

  <tbody>
  <% @daily_livings.each do |daily_living| %>
      <tr>
        <td><%= link_to daily_living.daily_living_type, daily_living %></td>
        <td><%= daily_living.daily_living_status %></td>
        <td><%= daily_living.date_start %></td>
        <td><%= daily_living.date_end %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
    initDataTable('daily_livings_table')
  })
</script>