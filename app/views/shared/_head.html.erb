<head>
  <meta charset="utf-8">
  <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->

  <title> <%= Setting['application_name'] %> </title>
  <meta name="description" content="">
  <meta name="author" content="">

  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

  <!-- Basic Styles -->
  <%= csrf_meta_tags %>

  <% if params[:controller].include? "thredded" %>
      <%= stylesheet_link_tag 'thredded', 'data-turbolinks-track'=> 'reload' %>
  <% end %>
  <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track'=> 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload' %>

  <% if params[:action].in?(['all_files', 'show']) %>
      <%= stylesheet_link_tag  'lightbox2', media: 'screen' %>
      <%= javascript_include_tag 'lightbox2', 'data-turbolinks-track'=> 'reload' %>
  <% end %>

  <meta name="turbolinks-cache-control" content="no-cache">

  <style>
    .smart-style-5
    {
      background: url(/assets/glass.jpg) no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }

    .jarviswidget-color-blueLight>header {
      border-color:#a0aeb3 !important;background:#B2C8D6;
    }
    .jarviswidget-color-blueLight .nav-tabs li:not(.active) a {
        color: white !important;
    }

    abbr[title] {
      border-bottom: none;
      text-decoration: none;
    }

    .ui-tabs .ui-tabs-nav li a {
      background-color:#4D7484;border:1px solid #4D7484;color:#ffffff;
    }
    .ui-tabs .ui-tabs-nav li a:hover {
      border:1px solid #DBC2A4;border-bottom:1px solid #ddd;background-color:#DBC2A4;
    }
    .ui-tabs .ui-tabs-nav li.ui-tabs-active a {
      border:1px solid #F59B69;border-bottom:1px solid #ddd;background-color:#F59B69;color:#000000;
    }
    .ui-tabs .ui-tabs-nav li.ui-tabs-active:hover {
      background:#F59B69;cursor:text;
    }
    .ui-tabs .ui-tabs-nav .ui-tabs-anchor {
      background-color:#4D7484;
    }
    .ui-tabs .ui-tabs-nav li.ui-tabs-active a {
      background-color:#F59B69;
    }
    .ui-tabs .ui-tabs-nav li {
      margin: 4px .2em 0 0;
    }
  
  </style>
  <!-- We recommend you use "your_style.css" to override SmartAdmin
       specific styles this will also ensure you retrain your customization with each SmartAdmin update.
  <link rel="stylesheet" type="text/css" media="screen" href="css/your_style.css"> -->

  <!-- FAVICONS -->
  <%= favicon_link_tag 'favicon.ico' %>


  <!-- Specifying a Webpage Icon for Web Clip

  <!-- iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">


</head>
