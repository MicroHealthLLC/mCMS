<h1>Note Templates</h1>

<%= link_to 'New Note Template', new_note_template_path, class:'btn btn-primary pull-right margin-bottom-10'  %>

<table  class="table table-responsive table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @note_templates.present? %>
      <% @note_templates.each do |note_template| %>
          <tr>
            <td><%= note_template.title %></td>
            <td><%= link_to 'Show', note_template %></td>
            <td><%= link_to 'Edit', edit_note_template_path(note_template) %></td>
            <td><%= link_to 'Destroy', note_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
