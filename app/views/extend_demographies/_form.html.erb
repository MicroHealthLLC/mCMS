<style>
  .ui-widget-content a {
    color: #214e75;
  }
  a.btn{
    color: white
  }
</style>
<%= simple_form_for([extend_demography.object, extend_demography],  html: {  class: 'form-horizontal' }) do |f| %>
    <% if extend_demography.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(extend_demography.errors.count, "error") %> prohibited this extend_demography from being saved:</h2>

          <ul>
            <% extend_demography.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :department_id %>
    <%= f.hidden_field :contact_id %>
    <%= f.hidden_field :organization_id %>
    <%= f.hidden_field :affiliation_id %>
    <%= f.hidden_field :insurance_id %>
    <%= f.hidden_field :type %>

    <div id="tabs" style="overflow: hidden;" class="ui-tabs ui-widget ui-widget-content ui-corner-all" >
      <ul class="nav-tabs ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
        <li class="ui-state-default ui-corner-top">
        <a class="ui-tabs-anchor" id="link-tabs-emails" href="#tabs-emails" >Emails</a></li>
        <li class="ui-state-default ui-corner-top">
          <a class="ui-tabs-anchor" id="link-tabs-faxes" href="#tabs-faxes">Faxes</a></li>
        <li class="ui-state-default ui-corner-top">
          <a class="ui-tabs-anchor" id="link-tabs-phones" href="#tabs-phones">Phones</a></li>
        <% unless extend_demography.object.is_a?(Affiliation) or  extend_demography.object.is_a?(Contact) %>
            <li class="ui-state-default ui-corner-top">
              <a class="ui-tabs-anchor" id="link-tabs-identifications" href="#tabs-identifications">Identifications</a></li>
        <% end %>
        <li class="ui-state-default ui-corner-top">
          <a class="ui-tabs-anchor" id="link-tabs-social_media" href="#tabs-social_media">Social media</a></li>
        <li class="ui-state-default ui-corner-top">
          <a class="ui-tabs-anchor" id="link-tabs-addresses" href="#tabs-addresses">Address</a></li>
      </ul>
      <div id='tabs-emails' class="nav-tabs-div ui-tabs-panel ui-widget-content ui-corner-bottom" >
        <%= f.simple_fields_for :emails do |mail| %>
            <%= render 'extend_demographies/email_fields', :f => mail %>
        <% end %>
        <div id="emails" class="col-xs-11 margin-top-10">
          <%= link_to_add_association 'add email', f, :emails, class: 'btn btn-success  ', partial: 'extend_demographies/email_fields' %>

        </div>
      </div>
      <div id='tabs-faxes' class="nav-tabs-div ui-tabs-panel ui-widget-content ui-corner-bottom" >
        <%= f.simple_fields_for :faxes do |fax| %>
            <%= render 'extend_demographies/fax_fields', :f => fax %>
        <% end %>
        <div id="faxes" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
          <%= link_to_add_association 'add fax number', f, :faxes, class: 'btn btn-success  ', partial: 'extend_demographies/fax_fields' %>
        </div>
      </div>
      <div id='tabs-phones' class="nav-tabs-div ui-tabs-panel ui-widget-content ui-corner-bottom" >
        <%= f.simple_fields_for :phones do |phone| %>
            <%= render 'extend_demographies/phone_fields', :f => phone %>
        <% end %>

        <div id="phones" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
          <%= link_to_add_association 'add phone', f, :phones, class: 'btn btn-success  ', partial: 'extend_demographies/phone_fields' %>
        </div>
      </div>

      <% unless extend_demography.object.is_a?(Affiliation) or  extend_demography.object.is_a?(Contact)%>
          <div id='tabs-identifications' class="nav-tabs-div ui-tabs-panel ui-widget-content ui-corner-bottom" >
            <%= f.simple_fields_for :identifications do |identification| %>
                <%= render 'extend_demographies/identification_fields', :f => identification %>
            <% end %>

            <div id="identifications" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
              <%= link_to_add_association 'add identification', f, :identifications, class: 'btn btn-success  ', partial: 'extend_demographies/identification_fields' %>
            </div>
          </div>
      <% end %>

      <div id='tabs-social_media' class="nav-tabs-div ui-tabs-panel ui-widget-content ui-corner-bottom"  >
        <%= f.simple_fields_for :social_media do |sm| %>
            <%= render 'extend_demographies/social_media_fields', :f => sm %>
        <% end %>

        <div id="social_media" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
          <%= link_to_add_association 'add social media', f, :social_media, class: 'btn btn-success  ', partial: 'extend_demographies/social_media_fields' %>
        </div>
      </div>

      <div id='tabs-addresses' class="nav-tabs-div ui-tabs-panel ui-widget-content ui-corner-bottom" >
        <%= f.simple_fields_for :addresses do |address| %>
            <%= render 'extend_demographies/address_fields', :f => address %>
        <% end %>

        <div id="addresses" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
          <%= link_to_add_association 'add address', f, :addresses, class: 'make_address btn btn-success  ', partial: 'extend_demographies/address_fields' %>
        </div>
      </div>
    </div>
    <div class="">
      <div class="col-sm-4 col-md-3 col-lg-3"> </div>
      <div class="col-sm-8 col-md-9 col-lg-9">
        <div class="form-group" >
          <div class="col-md-11" >
            <%= f.submit t('button_save'), class: 'btn btn-success pull-right' %>
          </div>
        </div>
      </div>
    </div>
<% end %>
<script>
    $( function() {
        $tabs = $( "#tabs" ).tabs()
      $('.make_address').on('click', function(){
        setTimeout(function(){initMap();}, 1000);
      })
    } );
</script>
