<style>
  a.btn{
    color: white
  }
</style>

<%= simple_form_for([extend_demography.object, extend_demography],  html: {  class: 'form-horizontal' }) do |f| %>
    <% if extend_demography.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(extend_demography.errors.count, "error") %> prohibited this extend_demography from being saved:</h2>

          <ul>
            <% extend_demography.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :department_id %>
    <%= f.hidden_field :contact_id %>
    <%= f.hidden_field :organization_id %>
    <%= f.hidden_field :affiliation_id %>
    <%= f.hidden_field :insurance_id %>
    <%= f.hidden_field :type %>

    <div id="tabs" style="overflow: hidden;">
      <ul>
        <li><a id="link-tabs-emails" href="#tabs-emails">Emails</a></li>
        <li><a id="link-tabs-faxes" href="#tabs-faxes">Faxes</a></li>
        <li><a id="link-tabs-phones" href="#tabs-phones">Phones</a></li>
        <li><a id="link-tabs-social_media" href="#tabs-social_media">Social Media</a></li>
        <li><a id="link-tabs-addresses" href="#tabs-addresses">Addresses</a></li>
      </ul>
      <div id='tabs-emails' >
        <%= f.simple_fields_for :emails do |mail| %>
            <%= render 'extend_demographies/email_fields', :f => mail %>
        <% end %>
        <div id="emails" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;">
          <%= link_to 'add email', new_extend_demography_email_path(extend_demography), class: 'btn btn-success  ' %>

        </div>
      </div>
      <div id='tabs-faxes' >
        <%= f.simple_fields_for :faxes do |fax| %>
            <%= render 'extend_demographies/fax_fields', :f => fax %>
        <% end %>
        <div id="faxes" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
          <%= link_to 'add fax number', new_extend_demography_fax_path(extend_demography), class: 'btn btn-success  ' %>
        </div>
      </div>

      <div id='tabs-phones' >
        <%= f.simple_fields_for :phones do |phone| %>
            <%= render 'extend_demographies/phone_fields', :f => phone %>
        <% end %>

        <div id="phones" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
          <%= link_to 'add phone', new_extend_demography_phone_path(extend_demography), class: 'btn btn-success  ' %>
        </div>
      </div>

      <div id='tabs-social_media' >
        <%= f.simple_fields_for :social_media do |sm| %>
            <%= render 'extend_demographies/social_media_fields', :f => sm %>
        <% end %>

        <div id="social_media" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
          <%= link_to 'add social media', new_extend_demography_social_medium_path(extend_demography), class: 'btn btn-success  ' %>
        </div>
      </div>

      <div id='tabs-addresses' >
        <%= f.simple_fields_for :addresses do |address| %>
            <%= render 'extend_demographies/address_fields', :f => address %>
        <% end %>

        <div id="addresses" class="col-xs-11 margin-top-10" style="padding-right: 2px; margin-left: 6px;" >
          <%= link_to 'add address', new_extend_demography_address_path(extend_demography), class: 'btn btn-success  ' %>
        </div>
      </div>
    </div>
    <div class="">
      <div class="col-sm-4 col-md-3 col-lg-3"> </div>
      <div class="col-sm-8 col-md-9 col-lg-9">
        <div class="form-group" >
          <div class="col-md-11" >
            <%= f.submit t('button_save'), class: 'btn btn-success pull-right' %>
          </div>
        </div>
      </div>
    </div>
<% end %>
<script>
    $( function() {
        $tabs = $( "#tabs" ).tabs()
        $('.make_address').on('click', function(){
            setTimeout(function(){initMap();}, 1000);
        })
    } );
</script>
