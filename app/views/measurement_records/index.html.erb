<%#= link_to 'New Measurement', new_measurement_record_path, class: 'btn btn-primary pull-right btn-edition' if can?(:manage_roles, :create_measurement_records, :manage_measurement_records) %>
<%= link_to 'Print', params.permit(:from, :to, :status_type).merge(format: 'pdf'), class: 'pull-right btn btn-primary'  %>

<section id="widget-grid" class="show_customer_measurement">
  <% if can?(:create_measurement_records, :manage_roles, :manage_measurement_records) %>
      <div class="btn-group pull-right btn-edition">
        <button class="btn btn-primary">
          Add measurement For
        </button>
        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <% @cases_for_btn.each do |c| %>
              <li>
                <%= link_to c, new_measurement_record_path(case_id: c.id) %>
              </li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'list',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                     wid_id: 'measurements',
                     wid_title: 'Measurements'
                 } %>
    </article>
  </div>
</section>

