<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Priority type</th>
      <th>Goal status</th>
      <th>Description</th>
      <th>Date start</th>
      <th>Date due</th>
      <th>Date complete</th>
      <th>User</th>
      <th>Case</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.name %></td>
        <td><%= goal.priority_type_id %></td>
        <td><%= goal.goal_status_id %></td>
        <td><%= goal.description %></td>
        <td><%= goal.date_start %></td>
        <td><%= goal.date_due %></td>
        <td><%= goal.date_complete %></td>
        <td><%= goal.user_id %></td>
        <td><%= goal.case_id %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

