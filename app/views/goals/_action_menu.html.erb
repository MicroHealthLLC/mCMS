<div class="col-xs-12 btn-edition">
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
    <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:190px;">
      <% if @goal.can?(:delete_goals, :manage_goals, :manage_roles) %>
        <li>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <%= link_to('Delete', goal_path(@goal), class: 'dropdown-item',
                        :method => :delete,
                        :data => {:confirm => t(:text_are_you_sure)}) 
            %>
        </li>
        <div class='dropdown-item-dividier'></div>
      <% end %>

      <% if params[:action] == 'show' %>
        <% if @goal.can?(:edit_goals, :manage_goals, :manage_roles) %>
          <li>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <%= link_to 'Edit', edit_goal_path(@goal), class: 'dropdown-item' %>
          </li>
          <div class='dropdown-item-dividier'></div>
        <% end %>
      <% else %>
        <% if @goal.can?(:show_goals, :manage_goals, :manage_roles) %>
          <li>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <%= link_to 'Show', goal_path(@goal), class: 'dropdown-item' %>
          </li>
          <div class='dropdown-item-dividier'></div>
        <% end %>
      <% end %>

        <li>
          <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
          <%= link_to 'Cancel', goal_back_url(@goal), class: 'dropdown-item' %>
        </li>
        <div class='dropdown-item-dividier'></div>

        <li>
          <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
          <%= link_to 'Print', goal_path(@goal, format: 'pdf'), class: 'dropdown-item' %>
        </li>
          <div class='dropdown-item-dividier'></div>

        <li>
          <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
          <%= link_to 'History Changes', "/histories/#{@goal.class}/#{@goal.id}", class: 'dropdown-item' %>
        </li>

      <% if @goal.can?(:manage_goals, :manage_roles) %>
          <div class='dropdown-item-dividier'></div>
        <li>
          <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
            <%= link_to 'Manage Plans', links_goal_path(@goal), class: 'dropdown-item' %>
        </li>
          <div class='dropdown-item-dividier'></div>
        <li>
          <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
            <%= link_to 'Link to Needs', link_need_goal_path(@goal), class: 'dropdown-item' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
