<h1><%= t(:users) %></h1>

<%= link_to t(:new_user), new_employee_path, class: 'btn btn-primary pull-right margin-bottom-10' %>
<table class="table table-bordered table-responsive" id="users">
  <thead>
  <tr>
    <th>#</th>
    <th><%= t :login %></th>
    <th><%= t :email %></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% if @users.any? %>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.login %></td>
            <td><%= user.email %></td>
            <td><%= show_link user %></td>
            <td><%= delete_link( user) if current_user != user %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>

  </tbody>
</table>

<script>
  $(document).ready(function() {
    initDataTable('users')
  } );
</script>