
<section id="widget-grid" class="languages_section">

  <% if @languages %>
      <%= link_to('New Language', new_language_path, class: 'btn btn-primary pull-right margin-bottom-10') if can?(:create_languages, :manage_roles, :manage_languages) %>
      <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= render partial: 'languages/list',
                     layout: 'shared/smart_widget_wrapper',
                     locals: {
                         languages: @languages,
                         wid_id: 'languages',
                         wid_title: t('languages')
                     } %>
        </article>
      </div>
  <% end %>
  <% if @affiliations %>
      <%= link_to( t(:new_affiliation), new_affiliation_path, class: 'btn btn-primary pull-right margin-bottom-10') if can?(:create_affiliations, :manage_affiliations, :manage_roles) %>
      <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= render partial: 'affiliations/list',
                     layout: 'shared/smart_widget_wrapper',
                     locals: {
                         affiliations: @affiliations,
                         wid_id: 'affiliations',
                         wid_title: t('affiliations')
                     } %>
        </article>
      </div>
  <% end %>
  <% if @contacts %>
      <div class="row">
        <div class="col-xs-12">
          <%= link_to( 'Search Contact', search_contacts_path, class: 'btn btn-primary pull-right margin-bottom-10') if can?(:search_contacts, :manage_contacts, :manage_roles)  %>
          <%= link_to( 'New Contact', new_contact_path, class: 'btn btn-primary pull-right margin-bottom-10') if can?(:create_contacts, :manage_contacts, :manage_roles)  %>
        </div>
      </div>

      <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= render partial: 'contacts/list',
                     layout: 'shared/smart_widget_wrapper',
                     locals: {
                         contacts: @contacts,
                         wid_id: 'contacts',
                         wid_title: t('contacts')
                     } %>
        </article>
      </div>
  <% end %>
  <% if @user_insurances %>
      <%= link_to(t('new_insurance'), new_user_insurance_path, class:'btn btn-primary pull-right margin-bottom-10') if can?(:create_insurances, :manage_insurances, :manage_roles) %>

      <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= render partial: 'user_insurances/list',
                     layout: 'shared/smart_widget_wrapper',
                     locals: {
                         user_insurances: @user_insurances,
                         wid_id: 'insurances',
                         wid_title: t('insurance')
                     } %>
        </article>
      </div>
  <% end %>
  <% if @documents %>
      <%= link_to( t('new_document'), new_client_document_path, class:'btn btn-primary pull-right margin-bottom-10') if can?(:create_documents, :manage_roles, :manage_documents) %>
      <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <%= render partial: 'documents/list',
                     layout: 'shared/smart_widget_wrapper',
                     locals: {
                         documents: @documents,
                         wid_id: 'documents',
                         wid_title: t('documents')
                     } %>
        </article>
      </div>
  <% end %>
</section>
