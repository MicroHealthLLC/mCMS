
<fieldset>
  <legend></legend>
  <%= form_for(financial, html: { class: 'form-horizontal',  :multipart => true}) do |f| %>
      <% if financial.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(financial.errors.count, "error") %> prohibited this daily living from being saved:</h2>

            <ul>
              <% financial.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= f.hidden_field :user_id %>

      <div class="form-group">
        <%= f.label t(:title), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :title , class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label t(:financial_type), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.select :financial_type_id, options_for_select(FinancialType.active.pluck(:name, :id), selected: f.object.financial_type.try(:id)) , {} ,{class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:financial_state), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.select :financial_state_id, options_for_select(FinancialState.active.pluck(:name, :id), selected: f.object.financial_state.try(:id)) , {} ,{class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:financial_status), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.select :financial_status_id, options_for_select(FinancialStatus.active.pluck(:name, :id), selected: f.object.financial_status.try(:id)) , {} ,{class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:estimated_amount), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :estimated_amount , class: 'form-control' %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label t(:description) , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_area :description , class: 'form-control ck-editor' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:date_start) , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :date_start , class: 'form-control date_picker' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:date_end) , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :date_end , class: 'form-control date_picker' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <%= f.label t(:attachments) , class: 'col-md-2 control-label' %>
        </div>
        <%= f.simple_fields_for :financial_attachments do |attachment| %>
            <%= render 'attachments/attachment_show', :f => attachment %>
        <% end %>
        <div id="attachment_fields" class="col-md-2 margin-top-10 " style="padding-right: 2px;" >
          <%= link_to_add_association 'add file', f, :financial_attachments, class: 'btn btn-success pull-right', partial: 'attachments/attachment_fields' %>
        </div>
      </div>

      <div class="form-group" >
        <div class="col-md-11">
          <%= link_to t('button_cancel'), financials_path, class: 'btn btn-warning pull-right' %>
          <%= f.submit t(:button_save), class: 'btn btn-primary pull-right' %>
        </div>
      </div>
  <% end %>
</fieldset>