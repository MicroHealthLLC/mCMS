<%= link_to( 'Add Assessment', new_appointment_capture_path(appointment_id: @appointment.id), class: 'btn btn-primary pull-right') if can?(:add_captures, :manage_roles) %>
<table  class="table table-bordered table-responsive" id="appointment_captures_table">
  <thead>
  <tr>
    <th>Assessment</th>
    <th>Date Recorded</th>
  </tr>
  </thead>

  <tbody>

  <% captures.each do |capture| %>
      <tr>
        <td><%= link_to capture.assessment, capture  %></td>
        <td><%= capture.date_recorded   %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
   initDataTable('appointment_captures_table');
  } );
</script>
