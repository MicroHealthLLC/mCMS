<fieldset>
  <legend></legend>
  <div class="col-md-12">
    <%= form_tag send_sms_path, class: 'form-horizontal' do %>
        <div class="form-group">
          <%= label_tag 'To', 'To', class: 'col-md-2 control-label' %>
          <div class="col-md-9">
            <%= select_tag :phone_number, options_for_select(user.all_phone_number), {class: 'form-control'} %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :body, 'Content', class: 'col-md-2 control-label' %>
          <div class="col-md-9">
            <%= text_area_tag :body, '', class: 'form-control', required: true %>
          </div>
        </div>

        <div class="form-group" >
          <div class="col-md-11">
            <%= submit_tag "Send SMS", class: 'btn btn-success pull-right' %>
          </div>
        </div>
    <% end %>
  </div>
</fieldset>
