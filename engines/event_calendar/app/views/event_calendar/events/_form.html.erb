<fieldset>
  <legend></legend>
  <%= form_for(event, html: { class: 'form-horizontal'}) do |f| %>

      <% if event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
              <% event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label t(:title), class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.hidden_field :user_id , class: 'form-control' %>
          <%= f.text_field :name , class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label 'Color', class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <div class="btn-group btn-group-justified btn-select-tick" data-toggle="buttons">
            <label class="btn bg-color-darken <%= 'active' if f.object.color == 'bg-color-darken txt-color-white' %>">
              <input type="radio" name="event[color]" id="option1" value="bg-color-darken txt-color-white" <%= 'checked' if f.object.color == 'bg-color-darken txt-color-white' %>>
              <i class="fa fa-check txt-color-white"></i> </label>
            <label class="btn bg-color-blue  <%= 'active' if f.object.color == 'bg-color-blue txt-color-white' %>">
              <input type="radio" name="event[color]" id="option2" value="bg-color-blue txt-color-white" <%= 'checked' if f.object.color == 'bg-color-blue txt-color-white' %>>
              <i class="fa fa-check txt-color-white"></i> </label>
            <label class="btn bg-color-orange <%= 'active' if f.object.color == 'bg-color-orange txt-color-white' %>">
              <input type="radio" name="event[color]" id="option3" value="bg-color-orange txt-color-white" <%= 'checked' if f.object.color == 'bg-color-orange txt-color-white' %>>
              <i class="fa fa-check txt-color-white"></i> </label>
            <label class="btn bg-color-greenLight <%= 'active' if f.object.color == 'bg-color-greenLight txt-color-white' %>">
              <input type="radio" name="event[color]" id="option4" value="bg-color-greenLight txt-color-white" <%= 'checked' if f.object.color == 'bg-color-greenLight txt-color-white' %>>
              <i class="fa fa-check txt-color-white"></i> </label>
            <label class="btn bg-color-blueLight <%= 'active' if f.object.color == 'bg-color-blueLight txt-color-white' %>">
              <input type="radio" name="event[color]" id="option5" value="bg-color-blueLight txt-color-white" <%= 'checked' if f.object.color == 'bg-color-blueLight txt-color-white' %>>
              <i class="fa fa-check txt-color-white"></i> </label>
            <label class="btn bg-color-red <%= 'active' if f.object.color == 'bg-color-red txt-color-white' %>">
              <input type="radio" name="event[color]" id="option6" value="bg-color-red txt-color-white" <%= 'checked' if f.object.color == 'bg-color-red txt-color-white' %>>
              <i class="fa fa-check txt-color-white"></i> </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t(:description) , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_area :description , class: 'form-control ck-editor' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :start_time, class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :start_time , class: 'form-control datetimepicker' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :end_time , class: 'col-md-2 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :end_time , class: 'form-control datetimepicker' %>
        </div>
      </div>

      <div class="form-group" >
        <div class="col-md-11">
          <%= link_to t('button_cancel'), events_path, class: 'btn btn-warning pull-right' %>
          <%= f.submit t(:button_save), class: 'btn btn-success pull-right' %>
        </div>
      </div>
  <% end %>
</fieldset>
