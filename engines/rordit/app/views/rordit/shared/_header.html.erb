<div class="row">
  <div class="col-xs-12">
    <div class="header-right">
      <% unless params[:action] == 'index' %>
          <a href="/rordit" class="btn btn-primary">List Page</a>
      <% end %>
      <% if params[:action] != 'new' and can?(:manage_roles, :manage_link_share, :create_link_share) %>
          <a href="/rordit/share-link" class="btn btn-success">Share Link</a>
      <% end %>
      <% if params[:action] == 'show' and can?(:manage_roles, :manage_link_share) %>
          <%= link_to 'Delete', delete_link_path(params[:id]),method: :delete,
                      :data => {:confirm => t(:text_are_you_sure)},
              class: 'btn btn-danger' %>
      <%= link_to 'Edit', edit_link_path(@link),
              class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>