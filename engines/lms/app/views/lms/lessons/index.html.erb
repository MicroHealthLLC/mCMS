<div class="col-xs-12 btn-edition">
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle actions-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACTIONS <span class="caret"></span></button>
    <ul class="dropdown-menu dropdown-links" role="menu" style="min-width:180px;">
      <% if can?(:manage_roles) %>
        <li>
          <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
          <%= link_to 'New Lesson', lms.new_course_lesson_path(@course), class: 'dropdown-item' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<section id="widget-grid" class="course_lesson_section">
  <div class="row">
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= render partial: 'list',
                 layout: 'shared/smart_widget_wrapper',
                 locals: {
                     wid_id: 'lessons',
                     wid_title: 'Lessons'
                 } %>
    </article>
  </div>
</section>
