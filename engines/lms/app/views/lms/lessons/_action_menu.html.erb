<div class="col-xs-12 btn-edition">
  <%= link_to( 'Delete', lms.course_lesson_path(@course, @lesson), class: 'btn btn-danger pull-right',
               :method => :delete,
               :data => {:confirm => t(:text_are_you_sure)}) if @course.can?(:manage_roles, :manages_courses, :delete_courses)
  %>
  <%= link_to( 'Edit', lms.edit_course_lesson_path(@course, @lesson), class: 'btn btn-success pull-right') if @course.can?(:manage_roles, :manages_courses, :edit_courses) %>
  <%= link_to t('button_cancel'), lms.course_lessons_path(@course), class: 'btn btn-warning pull-right' %>
</div>
