<%= form_for [@course, @lesson, comment], html: { class: 'form-horizontal' } do |f| %>
    <div class="col-md-12">
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <div class="col-md-12">
      <%= link_to t('button_cancel'), lms.course_lessons_path(@course), class: 'btn btn-warning pull-right' %>
      <%= f.submit :save, class: 'btn btn-success pull-right' %>
    </div>

<% end %>
<hr/>
<section id="comment_section">
  <%= render partial: 'lms/comments/comment', collection: comments %>
</section>
