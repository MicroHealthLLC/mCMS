<%= stylesheet_link_tag "sticky_note/application", media: "all" %>

<h2 style="font-size: 24px; color: #3276b1; letter-spacing: 2px;">MY STICKY NOTES</h2>

<div class="row">
  <div class="col-xs-12">
    <div class="col-xs-12 btn-editable">
      <a href="javascript:;" class="button pull-right" id="add_note" title="Add New Note"><i class="glyphicon glyphicon-file"></i><sup>+</sup></a>
      <a href="javascript:;" class="button pull-right" id="export_notes" title="Export Notes"><i class="glyphicon glyphicon-export"></i></a>
      <a href="javascript:;" class="button pull-right" id="import_notes" title="Import Notes"><i class="glyphicon glyphicon-import"></i></a>
      <a href="javascript:;" class="button pull-right" id="reset_notes" title="Reset"><i class="glyphicon glyphicon-refresh"></i></a>
      <a href="javascript:;" class="button pull-right" id="btn_save" title="Save Notes"><i class="glyphicon glyphicon-save"></i></a>
    </div>
      
    <div id="board">
    </div>

    <a id="downloadAnchorElem" style="display:none"></a>

    <div id="importnotes" hidden>
      <h4>Upload File</h4>
      <form id="upload_form" enctype="multipart/form-data" action="" method="post">
        <input type="file" id="loadjson" name="files[]" multiple/>
        <textarea hidden id="preview" name="preview" rows="5"></textarea><br>
        <!-- <textarea id="preview" rows="5"></textarea><br> -->
        <a href="javascript:;" class="button" id="submit_upload" title="Submit Upload"><i class="glyphicon glyphicon-ok-circle"></i></a>
        <a href="javascript:;" class="button" id="cancel_upload" title="Cancel Upload"><i class="glyphicon glyphicon-remove-circle"></i></a>
      </form>
    </div>

    <footer id="footerdiv">
      <a href="javascript:;" class="button" id="to_top">To Top</a>
    </footer>
  </div>
</div>
<script>

  var thesenotes = <%= @todos.todos.to_s.inspect.html_safe %>;
  localStorage.setItem("thesenotes", thesenotes);
</script>
<%= javascript_include_tag "sticky_note/application" %>
