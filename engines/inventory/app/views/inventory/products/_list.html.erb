
<table class="table table-responsive table-bordered" id="products_table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Product category</th>
    <th>Product type</th>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Serial</th>
    <th>Unit cost</th>
    <th>Product Location</th>
    <th>Product status</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.product_category %></td>
        <td><%= product.product_type %></td>
        <td><%= product.manufacturer %></td>
        <td><%= product.model %></td>
        <td><%= product.serial %></td>
        <td><%= product.unit_cost %></td>
        <td><%= product.product_location %></td>
        <td><%= product.product_status %></td>
        <td><%= edit_link product_path(product) %></td>
        <td><%= delete_link product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    initDataTable('products_table')
  } );
</script>
