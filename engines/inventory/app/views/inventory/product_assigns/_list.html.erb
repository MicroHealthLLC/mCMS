<table class="table table-responsive display responsive nowrap table-bordered" id="products_table">
  <thead>
  <tr>
    <th>Product</th>
    <th>User</th>
    <th>Date</th>
    <th>Assignment status</th>

  </tr>
  </thead>

  <tbody>
  <% @product_assigns.each do |product_assign| %>
      <tr>
      <% if can?(:edit_product_assigns, :manage_product_assigns, :manage_roles) %>
        <td><%= link_to product_assign.product, edit_product_assign_path(product_assign) %></td>
      <% else %>
        <td><%= link_to product_assign.product, product_assign_path(product_assign) %></td>
      <% end %>        
        <td><%= product_assign.user %></td>
        <td><%= format_date product_assign.date %></td>
        <td><%= product_assign.assignment_status %></td>
       </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    initDataTable('products_table')
  } );
</script>
