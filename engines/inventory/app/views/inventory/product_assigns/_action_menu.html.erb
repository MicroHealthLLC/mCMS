<div class="col-xs-12 btn-edition">
  <%= link_to( 'Delete', product_assign_path(@product_assign), class: 'btn btn-danger pull-right',
              :method => :delete,
              :data => {:confirm => t(:text_are_you_sure)}) if @product_assign.can?(:manage_roles, :manages_product_assigns, :delete_product_assigns)
  %>
  <%= link_to( 'Edit', edit_product_assign_path(@product_assign), class: 'btn btn-success pull-right') if @product_assign.can?(:manage_roles, :manages_product_assigns, :edit_product_assigns) %>
  <%= link_to t('button_cancel'), product_assigns_path, class: 'btn btn-warning pull-right' %>
  <%= link_to t('button_print'), product_assign_path(@product_assign, format: 'pdf'), class: 'btn btn-primary pull-right' %>
 </div>
